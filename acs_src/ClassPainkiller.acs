					HudMessage(s:"a";HUDMSG_PLAIN|HUDMSG_NOTWITHFULLMAP|HUDMSG_LAYER_OVERHUD,1521+b,0,floorwhole(hudboundsx*0.59)+(b*357*1.0),floorwhole(hudboundsy*2.415),0.1,1.0);
				}
			}
		}
		
		Delay(1);
		holddelay--;
		dropdelay--;
	}
	RemoveMessages(1500,1600);
	SetPlayerProperty(0,0,PROP_TOTALLYFROZEN);
}

Script "Painkiller_GoldTarot_Activate" (void) net
{
	if(CheckInventory("Painkiller_GoldSlot1") == 0 && CheckInventory("Painkiller_GoldSlot2") == 0 && CheckInventory("Painkiller_GoldSlot3") == 0)
		terminate;
				
	if(CheckWeapon("Painkiller_DemonMorph"))
		terminate;
		
	int levelnum = GetLevelInfo(LEVELINFO_LEVELNUM);

	if(CheckInventory("Painkiller_TarotLevel") == levelnum)
	{
		if(!(CheckInventory("Painkiller_TarotUsage") < 9 && CheckInventory("Painkiller_Mercy_Power")) && !(CheckInventory("Painkiller_TarotUsage") < 6 && CheckInventory("Painkiller_Forgiveness_Power")))
			terminate;
	}
	TakeInventory("Painkiller_TarotLevel",99999);
	GiveInventory("Painkiller_TarotLevel",levelnum);
	GiveInventory("Painkiller_TarotUsage",1);
	
	int duration = 0;
	GiveInventory("Painkiller_GoldActive",1);
	if(CheckInventory("Painkiller_GoldSlot1") > 0)
		GiveInventory(Painkiller_Gold_CardGraphics[CheckInventory("Painkiller_GoldSlot1")-1][5],1);
	if(CheckInventory("Painkiller_GoldSlot2") > 0)
		GiveInventory(Painkiller_Gold_CardGraphics[CheckInventory("Painkiller_GoldSlot2")-1][5],1);
	if(CheckInventory("Painkiller_GoldSlot3") > 0)
		GiveInventory(Painkiller_Gold_CardGraphics[CheckInventory("Painkiller_GoldSlot3")-1][5],1);
	while(duration < 700+(CheckInventory("Painkiller_TimeBonus_Power")*350)+(CheckInventory("Painkiller_DoubleTimeBonus_Power")*700))
	{
		SetHudSize(320,256,1);
		SetFont("PKTARTAK");
		HudMessage(s:"a";HUDMSG_PLAIN|HUDMSG_NOTWITHFULLMAP|HUDMSG_LAYER_OVERHUD,1500,0,160.0,128.0,0.1,1.0);
		Delay(1);
		duration++;
	}
	TakeInventory("Painkiller_GoldActive",1);
}

