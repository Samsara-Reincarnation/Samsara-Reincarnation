actor SamsaraSlotTwo_Strife : RandomSpawner replaces StrifeCrossbow { DropItem "SamsaraSlotTwoPickup" }
actor SamsaraSlotTwo_Chex : RandomSpawner replaces LargeZorcher { DropItem "SamsaraSlotTwoPickup" }
