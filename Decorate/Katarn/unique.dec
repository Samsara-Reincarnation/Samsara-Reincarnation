	TNT1 A 0 A_Jump(128,"Anim2")
    69DG H 5
    69DG I 5 A_Scream
    69DG J 3 A_NoBlocking
    69DG K 4
    69DG L 3
    69DG M -1
    Stop
  Anim2:	
    69DG N 5
    69DG O 5 A_Scream
    69DG P 3 A_NoBlocking
    69DG Q 4
    69DG R 3
    69DG S -1	
  }
}

