actor MP5Drop : SamsaraSlotFourDrop
{
    +DROPPED
    +NEVERRESPAWN
    States
    {
      Spawn:
        HL00 A 0
        goto SpawnGameModeCheck

      SpawnActual:
        HL00 A 0 A_ChangeFlag("THRUACTORS",false)
        HL00 A -1 A_ChangeFlag("NOTIMEFREEZE",false)
        stop

      PickupSuccess:
        TNT1 A 0 A_JumpIfInventory("RottClass",1,"PickupSuccessContinue")
        TNT1 A 0 A_JumpIfInventory("CatacombClass",1,"PickupSuccessContinue")
        goto PickupSuccessAmmo1Check

      PickupSuccessAmmo1Check:
      PickupSuccessAmmo1:
        TNT1 A 0 A_GiveInventory("Clip",25)
        goto PickupSuccessAmmo3Check

      PickupSuccessAmmo3Check:
        TNT1 A 0 A_JumpIfInventory("HexenClass",1,"PickupSuccessContinue")
        TNT1 A 0 A_JumpIfInventory("Hexen2Class",1,"PickupSuccessContinue")
      PickupSuccessAmmo3:
        TNT1 A 0 A_GiveInventory("RocketAmmo",1)
        goto PickupSuccessContinue

      PickupSuccessContinue:
        TNT1 A 0
        goto Super::PickupSuccess
    }
}

actor AssaultShotgunDrop : SamsaraSlotTwoDrop
{
    +DROPPED
    +NEVERRESPAWN
    States
    {
      Spawn:
        HL00 A 0 NoDelay ACS_NamedExecuteWithResult("Samsara_SwitchableObject", 35)
        goto SpawnGameModeCheck

      SpawnActual:
        HL00 A 0 A_ChangeFlag("THRUACTORS",false)
        HL00 A -1 A_ChangeFlag("NOTIMEFREEZE",false)
        stop

      PickupSuccess:
        TNT1 A 0 A_JumpIfInventory("RottClass",1,"PickupSuccessContinue")
        TNT1 A 0 A_JumpIfInventory("CatacombClass",1,"PickupSuccessContinue")
        goto PickupSuccessAmmo2Check

      PickupSuccessAmmo2Check:
        TNT1 A 0 A_JumpIfInventory("WolfenClass",1,"PickupSuccessAmmo2CheckWolfenstein")
        TNT1 A 0 A_JumpIfInventory("HexenClass",1,"PickupSuccessContinue")
        TNT1 A 0 A_JumpIfInventory("Hexen2Class",1,"PickupSuccessContinue")
        goto PickupSuccessAmmo2

      PickupSuccessAmmo2CheckWolfenstein:
        TNT1 A 0 A_JumpIfInventory("WolfenClassMode",2,"PickupSuccessAmmo2")
        goto PickupSuccessContinue

      PickupSuccessAmmo2:
        TNT1 A 0 A_GiveInventory("Shell",8)
        goto PickupSuccessContinue

      PickupSuccessContinue:
        TNT1 A 0
        goto Super::PickupSuccess
    }
}

