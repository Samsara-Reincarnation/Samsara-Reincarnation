actor HalfLifeBlood
{
	Mass 5
	scale 0.17
	+PUFFGETSOWNER
	+NOBLOCKMAP
    +NOTELEPORT
    +ALLOWPARTICLES
    States
    {
    Spawn:
        TNT1 A 0 NoDelay A_SpawnItemEx("Switchable_FlyingBlood",0,0,0,random(-350,350)/100.00,random(-350,350)/100.00,random(500,1000)/100.00,random(-180,180),33|SXF_TRANSFERPOINTERS)
        TNT1 A 0 A_FaceTarget
    Ray:
		TNT1 A 0 A_CustomMissile("HalfLifeBlood_Ray", 0, 0, angle + random(-2,2),CMF_ABSOLUTEANGLE|CMF_ABSOLUTEPITCH,pitch + random(-2,2))
		Goto Quit
	Quit:
		HGB8 ABCDEFGHIJ 1 
		stop
	}
}	

