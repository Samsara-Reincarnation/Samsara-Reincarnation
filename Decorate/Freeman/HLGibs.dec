Actor HLBloodSpotRed 
{
	Radius 12
    Height 2
    Mass 1
	RenderStyle Translucent
	Alpha 0.9
	+NOINTERACTION
	+FLOORHUGGER
	-NOGRAVITY
	+THRUACTORS
	-SOLID
	States
	{
		Spawn:
		TNT1 A 0 
		TNT1 A 0 A_CheckFloor(1)
		stop
		TNT1 A 0 A_Jump(256,"Spawn1","Spawn2")
		Spawn1:
		HL00 A 2100
		TNT1 A 0 A_JumpIf(ACS_NamedExecuteWithResult("SamsaraDecorate",31) == 1, "Spawn1")
		HL00 AAAAAAAAAA 1 A_Fadeout(0.1)
		stop
		Spawn2:
		HL00 B 2100
		TNT1 A 0 A_JumpIf(ACS_NamedExecuteWithResult("SamsaraDecorate",31) == 1, "Spawn2")
		HL00 BBBBBBBBBB 1 A_Fadeout(0.1)
		stop
	}
}

