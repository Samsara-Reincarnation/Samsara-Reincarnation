Actor ".357 Python" : HLWeapon
{
	Weapon.Slotnumber 3
	Weapon.SelectionOrder 3000
	Weapon.BobRangeX 0
	Weapon.BobRangeY 0.75
	Weapon.BobSpeed 1.4
	Weapon.BobStyle Alpha 	
	Inventory.Pickupmessage "You got the .357 Magnum!"
	Inventory.Pickupsound "halflife/weaponpickup"
	DamageType "HLBullet"
	Weapon.AmmoType1 "HLPythonCounter"
    Weapon.AmmoUse1 0
    Weapon.AmmoGive1 12
	Weapon.AmmoType2 "HLDeagleCounter"
    Weapon.AmmoUse2 0
    Weapon.AmmoGive2 7
	Inventory.RestrictedTo "HalfLifePlayer"	
	states
	{
	Spawn:
		HW20 Z -1
		stop		
	Select:
		TNT1 A 0 A_TakeInventory("freeman_fistselected",1)	
		TNT1 A 0 A_TakeInventory("freeman_pistolselected",1)	
		TNT1 A 0 A_TakeInventory("freeman_slot1selected",1)	
		TNT1 A 0 A_TakeInventory("freeman_slot3selected",1)		
		TNT1 A 0 A_TakeInventory("freeman_slot4selected",1)		
		TNT1 A 0 A_TakeInventory("freeman_slot5selected",1)		
		TNT1 A 0 A_TakeInventory("freeman_slot6selected",1)
		TNT1 A 0 A_TakeInventory("freeman_slot7selected",1)		
		TNT1 A 0 A_GiveInventory("freeman_slot2selected",1)
	SelectLoop:	
		TNT1 AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA 0 A_Raise
		TNT1 A 1 A_Raise
		loop
	Deselect:
		TNT1 A 0 A_TakeInventory("HLDeagleLaserActivated", 1)
		TNT1 A 0 A_TakeInventory("freeman_slot2selected",1)
	DeselectLoop:	
		TNT1 AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA 0 A_Lower
		TNT1 A 1 A_Lower
		loop
	Ready:
		TNT1 A 0 A_JumpIfInventory("HalfLifeOpposingForce", 1, "ReadyOpp")
		TNT1 A 0 A_PlaySound("halflife/weaponselect",CHAN_WEAPON)
		HW20 ABCDEFGHIJK 1 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE)
		goto WIdle	
	ReadyOpp:
		TNT1 A 0 A_PlaySound("halflife/weaponselect",CHAN_WEAPON)
		OP20 ABCDEFGHIJKLMN 1 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE)
		goto WIdle	
	WIdle:
		TNT1 A 0 A_JumpIfInventory("HalfLifeOpposingForce", 1, "WIdleOpp")
		HW22 A 2 A_WeaponReady(WRF_ALLOWRELOAD)
		TNT1 A 0 A_Jump(4,"A")
		TNT1 A 0 A_Jump(3,"A")
		TNT1 A 0 A_Jump(2,"A")				
		TNT1 A 0 A_Jump(1,"Idle1","Idle2")
	A:	
		TNT1 A 0 A_JumpIfInventory("HLPythonCounter",1,"WIdle")		
		goto Reload
	Idle1:
		HW22 BCDEFGHIJKLMNOPQRSTUVWXYZ 1 A_WeaponReady(WRF_ALLOWRELOAD)
		HW30 ABCDEFGHIJKLMNOPQRSTUVWXYZ 1 A_WeaponReady(WRF_ALLOWRELOAD)
		HW31 ABCDEFGHIJKLMNOPQRSTUVWXYZ 1 A_WeaponReady(WRF_ALLOWRELOAD)
		HW32 ABCDEFGHIJKLMNOPQRSTUVWXYZ 1 A_WeaponReady(WRF_ALLOWRELOAD)
		HW33 ABCDEFGHIJKLMNOPQRSTUVWXYZ 1 A_WeaponReady(WRF_ALLOWRELOAD)
		HW34 ABCDEFGHIJKLMNOPQRSTUVWXYZ 1 A_WeaponReady(WRF_ALLOWRELOAD)
		HW35 ABCDEFGHIJKLMNOPQRSTUVWXYZ 1 A_WeaponReady(WRF_ALLOWRELOAD)
		HW36 ABCDEFGHIJKLMNOPQRSTUVWXYZ 1 A_WeaponReady(WRF_ALLOWRELOAD)
		HW37 ABCDEFGHIJKLMNOPQRSTUVWXYZ 1 A_WeaponReady(WRF_ALLOWRELOAD)
		HW38 ABCDEFGH 1 A_WeaponReady(WRF_ALLOWRELOAD)
		Goto WIdle
	Idle2:
		HW19 ABCDEFGHIJKLMNOPQRSTUVWXYZ 1 A_WeaponReady(WRF_ALLOWRELOAD)
		HW18 ABCDEFGHIJKLMNOPQRSTUVWXYZ 1 A_WeaponReady(WRF_ALLOWRELOAD)
		HW17 ABCDEFGHIJKLMNOPQRSTUVWXYZ 1 A_WeaponReady(WRF_ALLOWRELOAD)
		HW16 ABCDEFGHIJKLMNOPQRSTUVWXYZ 1 A_WeaponReady(WRF_ALLOWRELOAD)
		HW15 ABCDEFGHIJKLMNOPQRSTUVWXYZ 1 A_WeaponReady(WRF_ALLOWRELOAD)
		HW14 ABCDEFGHIJKLMNOPQRSTUVWXYZ 1 A_WeaponReady(WRF_ALLOWRELOAD)
		HW13 ABC 1 A_WeaponReady(WRF_ALLOWRELOAD)
		Goto WIdle		
	WIdleOpp:
		TNT1 A 0 A_JumpIfInventory("HalfLifeOpposingForce", 1, 1)
		Goto WIdle+1
		OP00 A 2 A_WeaponReady(WRF_ALLOWRELOAD)
		TNT1 A 0 A_Jump(4,"AOpp")
		TNT1 A 0 A_Jump(3,"AOpp")
		TNT1 A 0 A_Jump(2,"AOpp")				
		TNT1 A 0 A_Jump(1,"Idle1Opp","Idle2Opp","Idle3Opp","Idle4Opp","Idle5Opp")
	AOpp:	
		TNT1 A 0 A_JumpIfInventory("HLDeagleCounter",1,"WIdleOpp")		
		goto Reload
	Idle1Opp:
		HW22 BCDEFGHIJKLMNOPQRSTUVWXYZ 1 A_WeaponReady(WRF_ALLOWRELOAD)
		HW30 ABCDEFGHIJKLMNOPQRSTUVWXYZ 1 A_WeaponReady(WRF_ALLOWRELOAD)
		HW31 ABCDEFGHIJKLMNOPQRSTUVWXYZ 1 A_WeaponReady(WRF_ALLOWRELOAD)
		HW32 ABCDEFGHIJKLMNOPQRSTUVWXYZ 1 A_WeaponReady(WRF_ALLOWRELOAD)
		HW33 ABCDEFGHIJKLMNOPQRSTUVWXYZ 1 A_WeaponReady(WRF_ALLOWRELOAD)
		HW34 ABCDEFGHIJKLMNOPQRSTUVWXYZ 1 A_WeaponReady(WRF_ALLOWRELOAD)
		HW35 ABCDEFGHIJKLMNOPQRSTUVWXYZ 1 A_WeaponReady(WRF_ALLOWRELOAD)
		HW36 ABCDEFGHIJKLMNOPQRSTUVWXYZ 1 A_WeaponReady(WRF_ALLOWRELOAD)
		HW37 ABCDEFGHIJKLMNOPQRSTUVWXYZ 1 A_WeaponReady(WRF_ALLOWRELOAD)
		HW38 ABCDEFGH 1 A_WeaponReady(WRF_ALLOWRELOAD)
		Goto WIdleOpp
	Idle1Opp:
		OP00 ACDEFGHIJKLMNOPQRSTUVWXYZ 1 A_WeaponReady(WRF_ALLOWRELOAD)
		OP01 ABCDEFGHIJKLMNOPQRSTUVWXYZ 1 A_WeaponReady(WRF_ALLOWRELOAD)
		OP02 ABCDEFGHIJKLMNOPQRSTUVW 1 A_WeaponReady(WRF_ALLOWRELOAD)
		Goto WIdleOpp
	Idle2Opp:
		OP03 ABCDEFGHIJKLMNOPQRSTUVWXYZ 1 A_WeaponReady(WRF_ALLOWRELOAD)
		OP04 ABCDEFGHIJKLMNOPQRSTUVWXYZ 1 A_WeaponReady(WRF_ALLOWRELOAD)
		OP05 ABCDEFGH 1 A_WeaponReady(WRF_ALLOWRELOAD)
		Goto WIdleOpp
	Idle3Opp:
		OP06 ABCDEFGHIJKLMNOPQRSTUVWXYZ 1 A_WeaponReady(WRF_ALLOWRELOAD)
		OP07 ABCDEFGHIJKLMNOPQRSTUVW 1 A_WeaponReady(WRF_ALLOWRELOAD)
		Goto WIdleOpp	
	Idle4Opp:
		OP08 ABCDEFGHIJKLMNOPQRSTUVWXYZ 1 A_WeaponReady(WRF_ALLOWRELOAD)
		OP09 ABCDEFGHIJKLMNOPQRSTUVWXYZ 1 A_WeaponReady(WRF_ALLOWRELOAD)
		OP10 ABCDEFGHIJKLMNOPQRSTUVW 1 A_WeaponReady(WRF_ALLOWRELOAD)
		Goto WIdleOpp
	Idle5Opp:
		OP11 ABCDEFGHIJKLMNOPQRSTUVWXYZ 1 A_WeaponReady(WRF_ALLOWRELOAD)
		OP12 ABCDEFGHIJKLMNOPQRSTUVWXYZ 1 A_WeaponReady(WRF_ALLOWRELOAD)
		OP13 ABCDEFGH 1 A_WeaponReady(WRF_ALLOWRELOAD)
		Goto WIdleOpp
	Fire:
		TNT1 A 0 A_JumpIfInventory("HalfLifeOpposingForce", 1, "FireOpp")
		TNT1 A 0 A_JumpIfInventory("HLPythonCounter",1,"Hold")
		goto FireReload
	Hold:
		TNT1 A 0 A_JumpIfInventory("HalfLifeOpposingForce", 1, "HoldOpp")
		TNT1 A 0 A_JumpIfInventory("HLPythonCounter",1,1)
		goto FireReloadHold
		TNT1 A 0 ACS_NamedExecuteAlways("HalfLifeRecoil", 0, 2)
		TNT1 A 0 A_AlertMonsters
		HW38 I 1 bright A_TakeInventory("HLPythonCounter",1)
		HW38 J 1 bright A_PlaySound("halflife/python_shoot",CHAN_WEAPON)
		TNT1 A 0 A_JumpIfInventory("CoopModeOn",1,"FireCoop")
		TNT1 A 0 A_FireCustomMissile("HLPythonBullet",frandom(-5.0,5.0)/10.0,0,5,3,0,frandom(-5.0,5.0)/10.0)
		goto FireDone
	FireCoop:
		TNT1 A 0 A_FireCustomMissile("HLPythonBulletCoop",frandom(-5.0,5.0)/10.0,0,5,3,0,frandom(-5.0,5.0)/10.0)
		goto FireDone
	FireDone:
		HW23 ABCDEFGHIJKLMNOP 1
		HW23 QRSTUV 1
		HW23 WXYZ 2 A_Refire
		HW24 AB 1 A_Refire
		goto WIdle
	FireReload:
		HW29 I 1 A_PlaySound("halflife/weaponempty",CHAN_WEAPON)
		HW29 IJ 1
		TNT1 A 0 A_WeaponReady(WRF_NOFIRE|WRF_NOBOB)
		goto Reload
	FireReloadHold:
		TNT1 A 0 A_PlaySound("halflife/weaponempty",CHAN_WEAPON)
		HW23 QRSTUVWXY 2
		HW23 Z 1 A_ClearRefire
		HW24 AB 1 A_WeaponReady(WRF_NOFIRE|WRF_NOBOB)
		goto Reload
	FireOpp:
		TNT1 A 0 A_JumpIfInventory("HLDeagleCounter",1,"HoldOpp")
		goto FireReloadOpp
	HoldOpp:
		TNT1 A 0 A_JumpIfInventory("HalfLifeOpposingForce", 1, 1)
		Goto Hold+1
		TNT1 A 0 A_JumpIfInventory("HLDeagleCounter",2,1)
		goto FireDoneLastShot
		TNT1 A 0 A_AlertMonsters
		OP14 A 1 bright A_TakeInventory("HLDeagleCounter",1)
		OP14 B 1 bright A_PlaySound("Otis/Shoot",CHAN_WEAPON)
		OP14 C 0 A_JumpIfInventory("CoopModeOn",1,"FireCoopOpp")
		OP14 C 0 A_JumpIfInventory("HLDeagleLaserActivated", 1, "HoldShotLaser")
		goto FireDoneOpp
	HoldShotLaser:
		OP14 C 0 A_FireCustomMissile("HLDeagleBulletLaser",frandom(-5.0,5.0)/10.0,0,5,3,0,frandom(-5.0,5.0)/10.0)
		goto FireDoneOpp+1
	FireCoopOpp:
		OP14 C 0 A_FireCustomMissile("HLDeagleBulletCoop",frandom(-5.0,5.0)/2.0,0,5,3,0,frandom(-5.0,5.0)/2.0)
		goto FireDoneOpp+1
	HoldShotLaserCoop:
		OP14 C 0 A_FireCustomMissile("HLDeagleBulletLaserCoop",frandom(-5.0,5.0)/10.0,0,5,3,0,frandom(-5.0,5.0)/10.0)
		goto FireDoneOpp+1
	FireDoneOpp:
		OP14 C 0 A_FireCustomMissile("HLDeagleBullet",frandom(-5.0,5.0)/2.0,0,5,3,0,frandom(-5.0,5.0)/2.0)
		OP14 C 0 ACS_NamedExecuteAlways("HalfLifeRecoil", 0, 2)
		OP14 CDEFGHIJ 1
		OP14 K 0 A_JumpIfInventory("HLDeagleLaserActivated", 1, "FireDoneOppNoRefire")
		OP14 KLMNOPQRS 1 A_Refire
		goto WIdleOpp
	FireDoneOppNoRefire:
		OP14 KLMNOPQRS 1
		goto WIdleOpp
	FireReloadOpp:
		OP00 A 2 A_PlaySound("halflife/weaponempty",CHAN_WEAPON)
		OP00 A 2
		TNT1 A 0 A_WeaponReady(WRF_NOFIRE|WRF_NOBOB)
		goto ReloadOpp
	FireDoneLastShot:
		TNT1 A 0 A_JumpIfInventory("HLDeagleCounter",1,1)
		Goto Reload
		OP15 A 1 bright A_TakeInventory("HLDeagleCounter",1)
		OP15 B 1 bright A_PlaySound("Otis/Shoot",CHAN_WEAPON)
		OP15 C 0 A_JumpIfInventory("CoopModeOn",1,"FireCoopOppLastShot")
		OP15 C 0 A_JumpIfInventory("HLDeagleLaserActivated", 1, "HoldLastShotLaser")
		OP15 C 0 A_FireCustomMissile("HLDeagleBullet",frandom(-5.0,5.0)/2.0,0,5,3,0,frandom(-5.0,5.0)/2.0)
		OP15 C 0 ACS_NamedExecuteAlways("HalfLifeRecoil", 0, 2)
		OP15 CDEFGHIJ 1
		OP15 KLMNOPQRS 1
		goto ReloadOpp
	HoldLastShotLaser:
		OP15 C 0 A_FireCustomMissile("HLDeagleBulletLaser",frandom(-5.0,5.0)/10.0,0,5,3,0,frandom(-5.0,5.0)/10.0)
		OP15 C 0 A_JumpIfInventory("HLDeagleCounter",1,"FireDoneOpp")
		OP15 C 0 ACS_NamedExecuteAlways("HalfLifeRecoil", 0, 2)
		OP15 CDEFGHIJ 1
		OP15 KLMNOPQRS 1
		goto ReloadOpp
	FireCoopOppLastShot:
		OP15 C 0 A_JumpIfInventory("HLDeagleLaserActivated", 1, "HoldLastShotLaserCoop")
		OP15 C 0 A_FireCustomMissile("HLDeagleBulletCoop",frandom(-5.0,5.0)/2.0,0,5,3,0,frandom(-5.0,5.0)/2.0)
		OP15 C 0 ACS_NamedExecuteAlways("HalfLifeRecoil", 0, 2)
		OP15 CDEFGHIJ 1
		OP15 KLMNOPQRS 1
		goto ReloadOpp
	HoldLastShotLaserCoop:
		OP15 C 0 A_FireCustomMissile("HLDeagleBulletLaserCoop",frandom(-5.0,5.0)/10.0,0,5,3,0,frandom(-5.0,5.0)/10.0)
		OP15 C 0 A_JumpIfInventory("HLDeagleCounter",1,"FireDoneOpp")
		OP15 C 0 ACS_NamedExecuteAlways("HalfLifeRecoil", 0, 2)
		OP15 CDEFGHIJ 1
		OP15 KLMNOPQRS 1
		goto ReloadOpp
	AltFire:
		TNT1 A 0 A_JumpIfInventory("HalfLifeOpposingForce", 1, 1)
		Goto AltFireNope
		TNT1 A 0 A_JumpIfInventory("HLDeagleLaserActivated", 1, "LaserDeactivate")
		goto LaserActivate
	AltFireNope:
		HW22 A 4
		Goto WIdle
	LaserActivate:
		TNT1 A 0 A_GiveInventory("HLDeagleLaserActivated", 1)
		TNT1 A 0 ACS_NamedExecuteAlways("HalfLifeLaserSight", 0, 1)
		TNT1 A 0 A_Playsound("HLDeagle/SightOn", CHAN_5)
		OP00 A 8
		Goto WIdleOpp
	LaserDeactivate:
		TNT1 A 0 A_TakeInventory("HLDeagleLaserActivated", 1)
		TNT1 A 0 A_Playsound("HLDeagle/SightOff", CHAN_5)
		OP00 A 8
		Goto WIdleOpp
	Reload:
		TNT1 A 0 A_JumpIfInventory("HalfLifeOpposingForce", 1, "ReloadOpp")
		TNT1 A 0 A_JumpIfInventory("HLPythonCounter",6,"WIdle")
		TNT1 A 0 A_JumpIfInventory("Shell",1,"ReloadSuccess")
		goto WIdle
	ReloadSuccess:
		TNT1 A 0 A_JumpIfInventory("HalfLifeOpposingForce", 1, "ReloadSuccessOpp")
		HW25 ABCDEFGHIJKLMNOPQRSTUVWXYZ 1
		HW26 ABCDEFGHIJKLMNOPQRSTUVWXY 1
		HW26 ZZZZZZ 0 A_SpawnItemEx("HLBrassShell",frandom(-2,2),frandom(-2,2),32,frandom(-10,10)/10.0,frandom(-10,10)/10.0,0)		
		HW26 Z 1
		HW27 ABCDEFGHIJKLMNOPQRSTUVWXYZ 1
		HW28 ABCDE 1
		HW28 F 1 A_PlaySound("halflife/python_reload",CHAN_WEAPON)
		goto ReloadAmmo
	ReloadAmmo:
		TNT1 A 0 A_JumpIfInventory("HLPythonCounter",6,"ReloadFinish")
		TNT1 A 0 A_JumpIfInventory("Shell",1,1)
		goto ReloadFinish
		TNT1 A 0 A_GiveInventory("HLPythonCounter",1)
		TNT1 A 0 A_TakeInventory("Shell",1,TIF_NOTAKEINFINITE)
		loop
	ReloadFinish:
		TNT1 A 0 A_JumpIfInventory("HalfLifeOpposingForce", 1, "ReloadFinishOpp")
		HW28 GHIJKLMNOPQRSTUVWXYZ 1
		HW29 ABCDE 1
		goto WIdle
	ReloadOpp:
		TNT1 A 0 A_JumpIfInventory("HalfLifeOpposingForce", 1, 1)
		Goto Reload+1
		TNT1 A 0 A_JumpIfInventory("HLDeagleCounter",7,"WIdleOpp")
		TNT1 A 0 A_JumpIfInventory("Shell",1,"ReloadSuccessOpp")
		goto WIdleOpp
	ReloadSuccessOpp:
		TNT1 A 0 A_JumpIfInventory("HLDeagleCounter",1,"ReloadSuccessOppNotEmpty")
		TNT1 A 0 A_PlaySound("HLDeagle/Reload",CHAN_WEAPON)
		OP16 ABCDEFGHIJKLMNOPQRSTUVWXYZ 1		
		goto ReloadAmmoOpp
	ReloadAmmoOpp:
		TNT1 A 0 A_JumpIfInventory("HLDeagleCounter",7,"ReloadFinishOpp")
		TNT1 A 0 A_JumpIfInventory("Shell",1,1)
		goto ReloadFinishOpp
		TNT1 A 0 A_GiveInventory("HLDeagleCounter",1)
		TNT1 A 0 A_TakeInventory("Shell",1,TIF_NOTAKEINFINITE)
		loop
	ReloadFinishOpp:
		OP17 ABCDEFGHIJKLMNO 1
		goto WIdle
	ReloadSuccessOppNotEmpty:
		TNT1 A 0 A_PlaySound("HLDeagle/Reload",CHAN_WEAPON)
		OP18 ABCDEFGHIJKLMNOPQRSTUVWXYZ 1		
		goto ReloadAmmoOppNotEmpty
	ReloadAmmoOppNotEmpty:
		TNT1 A 0 A_JumpIfInventory("HLDeagleCounter",7,"ReloadFinishOppNotEmpty")
		TNT1 A 0 A_JumpIfInventory("Shell",1,1)
		goto ReloadFinishOppNotEmpty
		TNT1 A 0 A_GiveInventory("HLDeagleCounter",1)
		TNT1 A 0 A_TakeInventory("Shell",1,TIF_NOTAKEINFINITE)
		loop
	ReloadFinishOppNotEmpty:
		OP19 ABCDEFGHIJKLMNO 1
		goto WIdle
	}
}

