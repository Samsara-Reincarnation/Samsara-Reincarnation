		TNT1 A 0 A_JumpIf(ACS_NamedExecuteWithResult("HalfLifeAllyFunctions",1) == 1,"FollowPlayer")
		TNT1 A 0 A_JumpIfInTargetInventory("AllyToken", 1, "IGNOREHELPERS")
