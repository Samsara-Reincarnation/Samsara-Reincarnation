	IGNOREHELPERS: 
		//Look until you find something that is not a helper. If the other possible target is the player, go towards it.
		//HL00 A 1
		HL00 ABCDEFGHIJKLMNOP 3
		HL00 A 0 A_JumpIf(ACS_NamedExecuteWithResult("HalfLifeAllyFunctions",1) != 2,"FollowPlayer")
		//TNT1 A 0 A_ChangeFLag("FRIENDLY", 1)
		HL00 A 0 A_ClearTarget
		Goto SpawnStandard
	FollowPlayer:
		HL04 A 1
		HL04 A 0 ACS_NamedExecuteAlways("HalfLifeAllyWalkRunSpeed", 0, 0)
		Goto FollowPlayerLoop
	FollowPlayerLoop:
		//Become unfriendly to chase the player directly. Lower their attack rate so they actually move towards it.
		HL04 A 0 A_ChangeFLag("FRIENDLY", 0)
		//This part was influenced by Brutal Doom's helper marines. Dash, check for proximity to player to stay still, otherwise check if it should teleport.
		//It...works. Much better than regular A_Chase.
		HL04 A 0 A_JumpIfCloser(80, "STAND")
		HL04 ABCD 0 A_FaceTarget
		HL04 A 0 A_JumpIf(ACS_NamedExecuteWithResult ("HalfLifeAllyFunctions", 2) == 1, "FollowRun")
		HL04 A 0 A_JumpIf(ACS_NamedExecuteWithResult("HalfLifeAllyFunctions",1) != 2,2)
		HL04 A 0 A_ClearTarget
		HL04 A 0 A_JumpIFCloser(256, 1)
		Goto FollowRun
		HL04 AA 2 A_Chase(0,0)
		HL04 B 0 A_JumpIfCloser(80, "STAND")
