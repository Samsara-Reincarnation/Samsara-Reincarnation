Actor HLBarneySpawn : HLBarney
{
	+NODROPOFF
	//+FRIENDLY
	Activation THINGSPEC_Activate|THINGSPEC_ThingTargets
	States
	{
	Spawn:
		TNT1 A 0
		TNT1 A 0 A_GiveInventory("HLBarneyClip", 17)
		HL00 A 0 A_JumpIfInventory("AllyToken", 1, "SpawnStandard")
		HL00 A 0 ACS_NamedExecuteAlways("HalfLifeFootStepGeneratorEnemy")
		HL00 A 0 A_GiveInventory("HLSpeedTokens",8)
		Goto SpawnStandard
	SpawnStandard:	
		TNT1 A 0
		TNT1 A 0 A_GiveInventory("AllyToken", 1)
		Goto IdleWaitForPlayers
	IdleFriendly:
		TNT1 A 0 A_ChangeFlag("NEVERTARGET", true)
		TNT1 A 0 A_ChangeFlag("Friendly", true)
		TNT1 A 0 A_Jump(240,2)
		TNT1 A 0 A_Playsound("HLBarney/Idle")
		TNT1 A 0 A_ClearTarget
		TNT1 A 0 A_LookEx(0,0,1280,1280,0,"SeeCheck")
		TNT1 A 0 A_Jump(256,"Idle1","Idle2","Idle3","Idle4")
		Goto Idle1
	Idle1:
		HL00 ABCDEFGHIJKLMNOP 8 A_Jump(16,"SeeCheck")
		goto IdleFriendly
	Idle2:
		HL01 ABCDEFGHIJKLMNOPQRSTUVWX 8 A_Jump(16,"SeeCheck")
		goto IdleFriendly
	Idle3:
		HL02 ABCDEFGHIJKLMNO 8 A_Jump(16,"SeeCheck")
		goto IdleFriendly
	Idle4:
		HL03 ABCDEFGHIJKLMNO 8 A_Jump(16,"SeeCheck")
		goto IdleFriendly
	IdleWaitForPlayers:
		TNT1 A 0 A_ChangeFlag("NEVERTARGET", true)
		TNT1 A 0 A_ChangeFlag("Friendly", 0)
		TNT1 A 0 A_Jump(240,2)
		TNT1 A 0 A_Playsound("HLBarney/Idle")
		TNT1 A 0 A_ClearTarget
		TNT1 A 0 A_LookEx(0,0,1280,1280,0,"SeeToken")
		TNT1 A 0 A_Jump(256,"Idle1Wait","Idle2Wait","Idle3Wait","Idle4Wait")
		Goto Idle1
	Idle1Wait:
		HL00 ABCDEFGHIJKLMNOP 8 A_Jump(16,"SeeToken")
		goto IdleWaitForPlayers
	Idle2Wait:
		HL01 ABCDEFGHIJKLMNOPQRSTUVWX 8 A_Jump(16,"SeeToken")
		goto IdleWaitForPlayers
	Idle3Wait:
		HL02 ABCDEFGHIJKLMNO 8 A_Jump(16,"SeeToken")
		goto IdleWaitForPlayers
	Idle4Wait:
		HL03 ABCDEFGHIJKLMNO 8 A_Jump(16,"SeeToken")
		goto IdleWaitForPlayers
	SeeToken:
		HL04 A 0 A_JumpIf(ACS_NamedExecuteWithResult("HalfLifeAllyFunctions",1) == 1,"GiveSeeToken")
		HL04 ABCDEFGHIJKLMNOP 3 A_Chase("","")
		Loop
	GiveSeeToken:
		TNT1 A 0 A_ChangeFlag("Friendly", 1)
		TNT1 A 0 A_GiveInventory("seetoken", 1)
		Goto IdleFriendly
	SeeCheck:
		TNT1 A 0 A_ChangeFlag("NEVERTARGET", true)
		TNT1 A 0 A_ClearTarget
		TNT1 A 0 A_LookEx(LOF_NOJUMP, 0, 1280, 1280, 0)
		TNT1 A 0 A_JumpIf(ACS_NamedExecuteWithResult("HalfLifeAllyFunctions",1) == 2,"Chase")
		TNT1 A 0 A_JumpIfInventory("seetoken", 1, "See2")
		goto See
	See:
		TNT1 A 0 A_ChangeFlag("NEVERTARGET", true)
		TNT1 A 0 A_JumpIfInventory("seetoken", 1, "See2")
		TNT1 A 0 A_Playsound("HLBarney/Greet")
		TNT1 A 0 A_GiveInventory("seetoken", 1)
		TNT1 A 0 A_JumpIfInTargetInventory("AllyToken", 1, "IgnoreHelpers")
		TNT1 A 0 A_JumpIf(ACS_NamedExecuteWithResult("HalfLifeAllyFunctions",1) == 2,"Chase")
		HL04 ABCDEFGHIJKLMNOP 3 A_Wander
		Goto IdleFriendly	
	See2:
		HL04 A 0 A_JumpIfInTargetInventory("AllyToken", 1, "IgnoreHelpers")
		HL04 A 0 A_JumpIf(ACS_NamedExecuteWithResult("HalfLifeAllyFunctions",1) == 2,"Chase")
		HL04 ABCDEFGHIJKLMNOP 3 A_Wander
		HL04 A 0
		Goto IdleFriendly
	Chase:
		HL04 ABCDEFGHIJKLMNOP 3 A_Chase
		loop
	IgnoreHelpers: 
		//Look until you find something that is not a helper. If the other possible target is the player, go towards it.
		HL00 ABCDEFGHIJKLMNOP 3 
		HL00 A 0 A_ClearTarget
		HL00 A 0 A_JumpIfInTargetInventory("AllyToken", 1, 2)
		GOTO SeeCheck
		TNT1 A 0 A_ClearTarget
		HL00 A 1 A_LookEx(0, 0, 0, 0, 360, "IGNOREHELPERS")
		Goto SeeCheck
	Active:
		TNT1 A 0 A_Playsound("HLBarney/Recruit")
		HL01 ABCDEFGHIJKLMNOPQRSTUVWXY 3
		TNT1 A 0 A_SpawnItemEx("HLBarney",0,0,0,0,0,0,0,SXF_NOCHECKPOSITION|SXF_TRANSFERPOINTERS)
		stop
	PullGun:
		TNT1 A 0 A_Jump(148,2)
		TNT1 A 0 A_ChangeFlag("NEVERTARGET", false)
		TNT1 A 0 A_Playsound("HLBarney/Attack")
		TNT1 A 0
		TNT1 A 0 A_FaceTarget
		TNT1 A 0 A_JumpifInventory("armedtoken", 1, "FireGun")
		HL07 ABCDEFGH 3 A_FaceTarget
	FireGun:
		TNT1 A 0 A_JumpIfInTargetInventory("AllyToken", 1, "IGNOREHELPERS")
		TNT1 A 0 A_JumpIfInventory("HLBarneyClip", 1, 1)
		Goto BReload
		TNT1 A 0 A_AlertMonsters(640, AMF_TARGETEMITTER)
		TNT1 A 0 A_Jump(128, "FireGun2")
		TNT1 A 0 A_FaceTarget
		TNT1 A 0 A_PlaySound("halflife/barney_shoot")
		TNT1 A 0 A_CustomBulletAttack(3,3,1,random(5,8),"HLBulletPuffCoop")
		TNT1 A 0 A_SpawnItemEx("HLMuzzleFlash_Enemy",20,4,42,0,0,0,0,SXF_NOCHECKPOSITION)
		TNT1 A 0 A_TakeInventory("HLBarneyClip", 1)
		HL09 ABCDEFG 3
		HL09 H 3 A_LookEx(0, 0, 0, 0, 360, "FireGun")
		Goto DisarmGun
	FireGun2:
		TNT1 A 0 A_FaceTarget
		TNT1 A 0 A_PlaySound("halflife/barney_shoot")
		TNT1 A 0 A_CustomBulletAttack(3,3,1,random(5,8),"HLBulletPuffCoop")
		TNT1 A 0 A_SpawnItemEx("HLMuzzleFlash_Enemy",20,4,42,0,0,0,0,SXF_NOCHECKPOSITION)
		TNT1 A 0 A_TakeInventory("HLBarneyClip", 1)
		HL10 ABCDEF 3
		HL10 G 3 A_LookEx(0, 0, 0, 0, 360, "FireGun")
		Goto DisarmGun
	DisarmGun:
		TNT1 A 0 A_JumpIfInventory("Killcount", 1, "DiscardKill")
		HL08 ABCDEFGHIJ 3
		Goto SpawnStandard
	DiscardKill:
		TNT1 A 0 A_Jump(48,2)
		TNT1 A 0 A_Playsound("HLBarney/Kill")
		TNT1 A 0
		TNT1 A 0 A_TakeInventory("Killcount", 99)
		HL08 ABCDEFGHIJ 3
		Goto Missile
	BReload:
		HL11 ABCDEFGHIJK 3 A_FaceTarget
		TNT1 A 0 A_GiveInventory("HLBarneyClip", 17)
		TNT1 A 0 A_JumpIfTargetInLOS("FireGun", 0, JLOSF_DEADNOJUMP)
		Goto See
	Pain.ShrinkerDMG:
		HL00 A 0
		"####" "#" 0 A_ChangeFlag("USESPECIAL", false)
