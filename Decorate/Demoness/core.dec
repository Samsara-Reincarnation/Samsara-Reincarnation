Actor Hexen2ShockHit
{
	+NOINTERACTION
	+NOBLOCKMAP
	+CLIENTSIDEONLY
	Renderstyle Add
	Alpha 1.0
	Radius 2
	Height 4
	Scale 0.5
	States
	{
		Spawn:
			TNT1 A 0
			TNT1 A 0 A_Jump(128,"Spawn2","Spawn3","Spawn4","Spawn5","Spawn6","Spawn7","Spawn8","Spawn9","Spawn10","Spawn11","Spawn12")
			HX00 A 0
		Spawn2:
			HX00 B 0
			Goto SpawnFinish
		Spawn3:
			HX00 C 0
			Goto SpawnFinish
		Spawn4:
			HX00 D 0
			Goto SpawnFinish
		Spawn5:
			HX00 E 0
			Goto SpawnFinish
		Spawn6:
			HX00 F 0
			Goto SpawnFinish
		Spawn7:
			HX00 G 0
			Goto SpawnFinish
		Spawn8:
			HX00 H 0
			Goto SpawnFinish
		Spawn9:
			HX00 I 0
			Goto SpawnFinish
		Spawn10:
			HX00 J 0
			Goto SpawnFinish
		Spawn11:
			HX00 K 0
			Goto SpawnFinish
		Spawn12:
			HX00 L 0
			Goto SpawnFinish
		SpawnFinish:
			HX00 "#" 0 A_JumpIfInventory("Hexen2ShockHitLifeTime",0,"Remove")
			HX00 "#" 1 Bright A_SetScale(scalex-(CallACS("Hexen2_Decorate",1)*0.25))	HX00 "#" 0 A_FadeOut(CallACS("Hexen2_Decorate",1)*0.25)
			HX00 "#" 0 A_GiveInventory("Hexen2ShockHitLifeTime",1)
			Loop
		Remove:
			TNT1 A 1
			stop
	}
}

actor Hexen2Blood : Blood
{
	+CLIENTSIDEONLY
	-ALLOWPARTICLES
	+CORPSE
	var int user_bloodloop;
    States
    {
    Spawn:
        TNT1 A 0 NoDelay A_SpawnItemEx("Switchable_FlyingBlood",0,0,0,random(-350,350)/100.00,random(-350,350)/100.00,random(500,1000)/100.00,random(-180,180),33)
	SpawnLoop:
		TNT1 A 0 A_JumpIf(user_bloodloop == 16, "Death")
		TNT1 A 0 A_SetUserVar("user_bloodloop", user_bloodloop+1)
		TNT1 A 0 A_SpawnItemEx("Hexen2BloodPuffGenerator",random(-6,6),random(-6,6),random(-4,4),0,0,frandom(-8,8),0,SXF_NOCHECKPOSITION)
		Loop
	Death:
	Crash:
		TNT1 A 1
		stop
	}
}	

