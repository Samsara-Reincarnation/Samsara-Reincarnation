	  HX00 D 0 A_GunFlash("DemonessFireStop",GFF_NOEXTCHANGE)
	  HX00 D 0 A_Jump(52,6)
	  HX00 DDDD 0 A_FireBullets(8,8,1,CallACS("Hexen2_IntelligenceMultiplier",4),"Hexen2BonerPuffGenerator",FBF_NORANDOM|FBF_NORANDOMPUFFZ)
