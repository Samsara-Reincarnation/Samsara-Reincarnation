	  HX00 E 0 A_Jump(52,6)
	  HX00 EEEE 0 A_FireBullets(8,8,1,CallACS("Hexen2_IntelligenceMultiplier",4),"Hexen2BonerPuffGenerator",FBF_NORANDOM|FBF_NORANDOMPUFFZ)
