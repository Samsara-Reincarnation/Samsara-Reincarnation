Actor SWStickyMustDie : SWBoolean {}
Actor SWStickyBeepCounter : SWCounter {}
Actor SWStickyMineNonActor
{
	+MISSILE
	+ISMONSTER
	//+NOBLOCKMAP
	+NOGRAVITY
	//+NONSHOOTABLE
	+SHOOTABLE
