	Health 1
	Radius 6 //9
	Height 6 //18
	DamageType "SWSticky"	
	Scale 0.35
	states
	{
	Spawn:
		SP10 AAA 36 A_ClearTarget
		SP10 A 1 A_PlaySound("sw/sticky_scan",CHAN_BODY)
	MineLoop:
		TNT1 A 0 A_CustomMissile("SWStickyChecker",0,0,0,CMF_AIMDIRECTION)
