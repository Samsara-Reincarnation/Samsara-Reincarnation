actor " Flamethrower ": InstantSwitchWeapon
{
    Weapon.SelectionOrder 1900
    Weapon.SlotNumber 6
    Inventory.PickUpSound "wolfen/flameget"
    Weapon.AmmoUse 1
    Weapon.AmmoGive 40
    Weapon.AmmoType "Cell"
    //+AMMO_OPTIONAL
    +DONTBOB
    +INVENTORY.UNDROPPABLE
    Inventory.PickupMessage "You got the Flamethrower!"
    Weapon.YAdjust 16
	Inventory.RestrictedTo "WolfenPlayer"
    Tag "Flamethrower"
    States
    {
      Spawn:
        TNT1 A 0
		TNT1 A 0 A_JumpIfInventory("WolfenClassMode",1,2)
		WFLP A 4
        Loop
		WFLP B 4
        Loop

      Ready:
	    TNT1 A 0 A_JumpIfInventory("WolfenClassMode",2,4)
        TNT1 A 0 A_JumpIfInventory("WolfenClassMode",1,2)
		WFLM A 1 A_WeaponReady
        loop
		WFLM E 1 A_WeaponReady
        loop
        TK08 A 1 A_WeaponReady
        loop		

      Fire:
		TNT1 A 0 A_JumpIfInventory("WolfenClassMode",2,4)
		TNT1 A 0 A_JumpIfInventory("WolfenClassMode",1,2)
        WFLM B 5
		Goto Hold
		WFLM F 5
		Goto Hold
        TK08 B 2	

      Hold:
		TNT1 A 0 A_JumpIfInventory("WolfenClassMode",2,"HoldCTK")
        TNT1 A 0 A_JumpIfInventory("WolfenClassMode",1,"HoldLost")
		TNT1 A 0 A_JumpIfInventory("CoopModeOn",1,"CoopFire")
		WPMG C 0 A_JumpIfCloser(128, "Hold.Close")
		WPMG C 0 A_JumpIfCloser(256, "Hold.Medium")
		WPMG C 0 A_JumpIfCloser(512, "Hold.Far")
		Goto Hold.Far
      Hold.Close:		
        WFLM A 0 A_FireCustomMissile("WolfenFire")
        WFLM C 2 BRIGHT
        WFLM B 2 BRIGHT
		Goto HoldPart2
      Hold.Medium:		
        WFLM A 0 A_FireCustomMissile("WolfenFire2")
        WFLM C 2 BRIGHT
        WFLM B 2 BRIGHT
		Goto HoldPart2	
      Hold.Far:		
        WFLM A 0 A_FireCustomMissile("WolfenFire3")
        WFLM C 2 BRIGHT
        WFLM B 2 BRIGHT
		Goto HoldPart2
	  HoldPart2:
		WPMG C 0 A_JumpIfCloser(128, "Hold.Close2")
		WPMG C 0 A_JumpIfCloser(256, "Hold.Medium2")
		WPMG C 0 A_JumpIfCloser(512, "Hold.Far2")
		Goto Hold.Far2
	  Hold.Close2:	
        WFLM A 0 A_FireCustomMissile("WolfenFire")
        WFLM D 2 BRIGHT
        WFLM B 2 BRIGHT
		Goto HoldEnd
	  Hold.Medium2:	
        WFLM A 0 A_FireCustomMissile("WolfenFire2")
        WFLM D 2 BRIGHT
        WFLM B 2 BRIGHT
		Goto HoldEnd	
	  Hold.Far2:	
        WFLM A 0 A_FireCustomMissile("WolfenFire3")
        WFLM D 2 BRIGHT
        WFLM B 2 BRIGHT
		Goto HoldEnd
	  HoldEnd:	
        TNT1 A 0 A_Refire
        WFLM B 3 A_ClearRefire
        Goto Ready
		
	  HoldLost:
        TNT1 A 0 A_JumpIfInventory("CoopModeOn",1,"CoopFireLost")
		WPMG C 0 A_JumpIfCloser(128, "HoldLost.Close")
		WPMG C 0 A_JumpIfCloser(256, "HoldLost.Medium")
		WPMG C 0 A_JumpIfCloser(512, "HoldLost.Far")
		Goto HoldLost.Far
      HoldLost.Close:			
        WFLM E 0 A_FireCustomMissile("WolfenFire")
        WFLM G 2 BRIGHT
        WFLM F 2 BRIGHT
		Goto HoldLostPart2
      HoldLost.Medium:			
        WFLM E 0 A_FireCustomMissile("WolfenFire2")
        WFLM G 2 BRIGHT
        WFLM F 2 BRIGHT
		Goto HoldLostPart2	
      HoldLost.Far:			
        WFLM E 0 A_FireCustomMissile("WolfenFire3")
        WFLM G 2 BRIGHT
        WFLM F 2 BRIGHT
		Goto HoldLostPart2	
	  HoldLostPart2:	
		WPMG C 0 A_JumpIfCloser(128, "HoldLost.Close2")
		WPMG C 0 A_JumpIfCloser(256, "HoldLost.Medium2")
		WPMG C 0 A_JumpIfCloser(512, "HoldLost.Far2")
		Goto HoldLost.Far2
      HoldLost.Close2:		  
        WFLM A 0 A_FireCustomMissile("WolfenFire")
        WFLM H 2 BRIGHT
        WFLM F 2 BRIGHT
		Goto HoldLostEnd
      HoldLost.Medium2:		  
        WFLM A 0 A_FireCustomMissile("WolfenFire2")
        WFLM H 2 BRIGHT
        WFLM F 2 BRIGHT
		Goto HoldLostEnd
      HoldLost.Far2:		  
        WFLM A 0 A_FireCustomMissile("WolfenFire3")
        WFLM H 2 BRIGHT
        WFLM F 2 BRIGHT
		Goto HoldLostEnd	
	  HoldLostEnd:	
        TNT1 A 0 A_Refire
        WFLM F 3 A_ClearRefire
        Goto Ready

      CoopFire:
		WPMG C 0 A_JumpIfCloser(128, "CoopFire.Close")
		WPMG C 0 A_JumpIfCloser(256, "CoopFire.Medium")
		WPMG C 0 A_JumpIfCloser(512, "CoopFire.Far")
		Goto CoopFire.Far
      CoopFire.Close:		
        WFLM A 0 A_FireCustomMissile("WolfenFireCoop")
        WFLM C 2 BRIGHT
        WFLM B 2 BRIGHT
		Goto CoopFirePart2
      CoopFire.Medium:		
        WFLM A 0 A_FireCustomMissile("WolfenFireCoop2")
        WFLM C 2 BRIGHT
        WFLM B 2 BRIGHT
		Goto CoopFirePart2	
      CoopFire.Far:		
        WFLM A 0 A_FireCustomMissile("WolfenFireCoop3")
        WFLM C 2 BRIGHT
        WFLM B 2 BRIGHT
		Goto CoopFirePart2
	  CoopFirePart2:
		WPMG C 0 A_JumpIfCloser(128, "CoopFire.Close2")
		WPMG C 0 A_JumpIfCloser(256, "CoopFire.Medium2")
		WPMG C 0 A_JumpIfCloser(512, "CoopFire.Far2")
		Goto CoopFire.Far2
	  CoopFire.Close2:	
        WFLM A 0 A_FireCustomMissile("WolfenFireCoop")
        WFLM D 2 BRIGHT
        WFLM B 2 BRIGHT
		Goto HoldEnd
	  CoopFire.Medium2:	
        WFLM A 0 A_FireCustomMissile("WolfenFireCoop2")
        WFLM D 2 BRIGHT
        WFLM B 2 BRIGHT
		Goto HoldEnd	
	  CoopFire.Far2:	
        WFLM A 0 A_FireCustomMissile("WolfenFireCoop3")
        WFLM D 2 BRIGHT
        WFLM B 2 BRIGHT
		Goto HoldEnd
	  CoopFireEnd:	
        TNT1 A 0 A_Refire
        WFLM B 3 A_ClearRefire
        Goto Ready
		
	  CoopFireLost:
		WPMG C 0 A_JumpIfCloser(128, "CoopFireLost.Close")
		WPMG C 0 A_JumpIfCloser(256, "CoopFireLost.Medium")
		WPMG C 0 A_JumpIfCloser(512, "CoopFireLost.Far")
		Goto CoopFireLost.Far
      CoopFireLost.Close:			
        WFLM E 0 A_FireCustomMissile("WolfenFireCoop")
        WFLM G 2 BRIGHT
        WFLM F 2 BRIGHT
		Goto CoopFireLostPart2
      CoopFireLost.Medium:			
        WFLM E 0 A_FireCustomMissile("WolfenFireCoop2")
        WFLM G 2 BRIGHT
        WFLM F 2 BRIGHT
		Goto CoopFireLostPart2	
      CoopFireLost.Far:			
        WFLM E 0 A_FireCustomMissile("WolfenFireCoop3")
        WFLM G 2 BRIGHT
        WFLM F 2 BRIGHT
		Goto CoopFireLostPart2	
	  CoopFireLostPart2:	
		WPMG C 0 A_JumpIfCloser(128, "CoopFireLost.Close2")
		WPMG C 0 A_JumpIfCloser(256, "CoopFireLost.Medium2")
		WPMG C 0 A_JumpIfCloser(512, "CoopFireLost.Far2")
		Goto CoopFireLost.Far2
      CoopFireLost.Close2:		  
        WFLM A 0 A_FireCustomMissile("WolfenFireCoop")
        WFLM H 2 BRIGHT
        WFLM F 2 BRIGHT
		Goto CoopFireLostEnd
      CoopFireLost.Medium2:		  
        WFLM A 0 A_FireCustomMissile("WolfenFireCoop2")
        WFLM H 2 BRIGHT
        WFLM F 2 BRIGHT
		Goto CoopFireLostEnd
      CoopFireLost.Far2:		  
        WFLM A 0 A_FireCustomMissile("WolfenFireCoop3")
        WFLM H 2 BRIGHT
        WFLM F 2 BRIGHT
		Goto CoopFireLostEnd	
	  CoopFireLostEnd:	
        TNT1 A 0 A_Refire
        WFLM F 3 A_ClearRefire
        Goto Ready		

      HoldCTK:
		TK08 C 0 A_JumpIfInventory("DMModeOn", 1, "DMHoldCTK")
		TK08 C 0 A_JumpIfInventory("CoopModeOn", 1, "CoopHoldCTK")
        TK08 C 0 A_PlaySound("Totenkopf/atkchaingun",CHAN_WEAPON)
        TK08 C 2 Bright A_FireCustomMissile("Totenkopf_Tracer_Chaingun",random(-6,6))
        TK08 D 2 Bright A_FireCustomMissile("Totenkopf_Tracer_Chaingun",random(-6,6))
		TK08 C 2 Bright A_FireCustomMissile("Totenkopf_Tracer_Chaingun",random(-6,6))
		TK08 D 2 Bright A_FireCustomMissile("Totenkopf_Tracer_Chaingun",random(-6,6))
		TK08 C 0 A_PlaySound("Totenkopf/atkchaingun",CHAN_WEAPON)
		TK08 C 2 Bright A_FireCustomMissile("Totenkopf_Tracer_Chaingun",random(-6,6))
        TK08 D 2 Bright A_FireCustomMissile("Totenkopf_Tracer_Chaingun",random(-6,6))
		TK08 C 2 Bright A_FireCustomMissile("Totenkopf_Tracer_Chaingun",random(-6,6))
		TK08 D 2 Bright
		TK08 D 0 A_Refire
        TK08 E 2
        Goto Ready
	  CoopHoldCTK:
        TK08 C 0 A_PlaySound("Totenkopf/atkchaingun",CHAN_WEAPON)
        TK08 C 2 Bright A_FireCustomMissile("Totenkopf_Tracer_ChaingunCoop",random(-6,6))
        TK08 D 2 Bright A_FireCustomMissile("Totenkopf_Tracer_ChaingunCoop",random(-6,6))
		TK08 C 2 Bright A_FireCustomMissile("Totenkopf_Tracer_ChaingunCoop",random(-6,6))
		TK08 D 2 Bright A_FireCustomMissile("Totenkopf_Tracer_ChaingunCoop",random(-6,6))
		TK08 C 0 A_PlaySound("Totenkopf/atkchaingun",CHAN_WEAPON)
		TK08 C 2 Bright A_FireCustomMissile("Totenkopf_Tracer_ChaingunCoop",random(-6,6))
        TK08 D 2 Bright A_FireCustomMissile("Totenkopf_Tracer_ChaingunCoop",random(-6,6))
		TK08 C 2 Bright A_FireCustomMissile("Totenkopf_Tracer_ChaingunCoop",random(-6,6))
		TK08 D 2 Bright
		TK08 D 0 A_Refire
        TK08 E 2
        Goto Ready	  	
	  DMHoldCTK:
        TK08 C 0 A_PlaySound("Totenkopf/atkchaingun",CHAN_WEAPON)
        TK08 C 2 Bright A_FireCustomMissile("Totenkopf_Tracer_ChaingunDM",random(-6,6))
        TK08 D 2 Bright A_FireCustomMissile("Totenkopf_Tracer_ChaingunDM",random(-6,6))
		TK08 C 2 Bright A_FireCustomMissile("Totenkopf_Tracer_ChaingunDM",random(-6,6))
		TK08 D 2 Bright A_FireCustomMissile("Totenkopf_Tracer_ChaingunDM",random(-6,6))
		TK08 C 0 A_PlaySound("Totenkopf/atkchaingun",CHAN_WEAPON)
		TK08 C 2 Bright A_FireCustomMissile("Totenkopf_Tracer_ChaingunDM",random(-6,6))
        TK08 D 2 Bright A_FireCustomMissile("Totenkopf_Tracer_ChaingunDM",random(-6,6))
		TK08 C 2 Bright A_FireCustomMissile("Totenkopf_Tracer_ChaingunDM",random(-6,6))
		TK08 D 2 Bright
		TK08 D 0 A_Refire
        TK08 E 2
        Goto Ready		
    }
}

actor WolfenFire
{
    Radius 12
    Height 8
    Speed 35 // Normal Doom plasma speed is 25
    Damage (8*Random(1,4)) // Typical Plasma Rifle damage is 5-40
    Projectile
    +RANDOMIZE
	+NOEXTREMEDEATH
    +BRIGHT
    DamageType "WolfenFlamethrower"
    SeeSound "wolfen/flamethrower"
    Obituary "$SAMSARA_WOLFEN_OB_SLOT6"
    States
    {
      Spawn:
        WFLB AB 6 bright
        loop

      Death:
        WFLB CDE 6 bright
        stop
    }
}

Actor WolfenFire2 : WolfenFire {  }
Actor WolfenFire3 : WolfenFire {  }

actor WolfenFireCoop: WolfenFire { +THRUSPECIES Species "Player" }
actor WolfenFireCoop2 : WolfenFire2 { +THRUSPECIES Species "Player" }
actor WolfenFireCoop3 : WolfenFire3 { +THRUSPECIES Species "Player" }

Actor Totenkopf_Tracer_Chaingun : Totenkopf_Tracer 
{ 
	Damage (10 + (random(0,256)%30)) 
	DamageType "TotenkopfChaingun" 
	Speed 8
	States
	{
		Spawn:
			TNT1 A 0
			TNT1 A 0 A_JumpIf(random(0,4)!=3,3)
			TNT1 A 0 A_ChangeFlag("NOEXTREMEDEATH",false)
			TNT1 A 0 A_ChangeFlag("EXTREMEDEATH",true)
			TNT1 A 0 A_ChangeVelocity(velx*128,vely*128,velz*128,CVF_REPLACE)
		SpawnLoop:
			TNT1 A 1
			Loop
	}
}
Actor Totenkopf_Tracer_ChaingunDM : Totenkopf_Tracer_Chaingun { Damage (10 + (random(0,256)%12)) }
Actor Totenkopf_Tracer_ChaingunCoop : Totenkopf_Tracer_Chaingun { Species "Player" +THRUSPECIES }