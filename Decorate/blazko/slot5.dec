actor " Rocket Launcher ": InstantSwitchWeapon
{
    Weapon.SelectionOrder 2500
    Weapon.SlotNumber 5
    Inventory.PickUpSound "wolfen/rocketget"
    Weapon.AmmoUse 1
    Weapon.AmmoGive 2
    Weapon.AmmoType "RocketAmmo"
    //+AMMO_OPTIONAL
    +DONTBOB
    +INVENTORY.UNDROPPABLE
    Inventory.PickupMessage "You got the Rocket Launcher!"
    Weapon.YAdjust 16
	Inventory.RestrictedTo "WolfenPlayer"
    Tag "Rocket Launcher"
    States
    {
      Spawn:
        TNT1 A 0
		TNT1 A 0 A_JumpIfInventory("WolfenClassMode",1,2)
		WRLP A 4
        Loop
		WRLP B 4
        Loop

      Ready:
		TNT1 A 0 A_JumpIfInventory("WolfenClassMode",2,4)
		TNT1 A 0 A_JumpIfInventory("WolfenClassMode",1,2)
		WRCK A 1 A_WeaponReady
        loop
        WRCK E 1 A_WeaponReady
        loop
        TK07 A 1 A_WeaponReady
        loop		

      Fire:
		TNT1 A 0 A_JumpIfInventory("WolfenClassMode",2,"FireCTK")
        TNT1 A 0 A_JumpIfInventory("WolfenClassMode",1,"FireLost")
		TNT1 A 0 A_JumpIfInventory("CoopModeOn",1,"CoopFire")
        TNT1 A 0 A_JumpIfInventory("RJingModeOn",1,"RJFire")
        WRCK B 4 BRIGHT A_FireCustomMissile("WolfRocket")
        WRCK CDCA 4
        WRCK A 0 A_Refire
        Goto Ready
        
      RJFire:
        WRCK B 4 BRIGHT A_FireCustomMissile("WolfRocketRJ")
        WRCK CDCA 4
        WRCK A 0 A_Refire
        Goto Ready

      CoopFire:
        TNT1 A 0 A_JumpIfInventory("RJingModeOn",1,"RJFireCoop")
        WRCK B 4 BRIGHT A_FireCustomMissile("WolfRocket2")
        WRCK CDCA 4
        WRCK A 0 A_Refire
        Goto Ready
        
      RJFireCoop:
        WRCK B 4 BRIGHT A_FireCustomMissile("WolfRocket2RJ")
        WRCK CDCA 4
        WRCK A 0 A_Refire
        Goto Ready
		
	  FireLost:
	    TNT1 A 0 A_JumpIfInventory("CoopModeOn",1,"CoopFireLost")
        TNT1 A 0 A_JumpIfInventory("RJingModeOn",1,"RJFireLost")
        WRCK F 4 BRIGHT A_FireCustomMissile("LostRocket")
        WRCK GHGE 4
        WRCK E 0 A_Refire
        Goto Ready
		
	  RJFireLost:
        WRCK F 4 BRIGHT A_FireCustomMissile("LostRocketRJ")
        WRCK GHGE 4
        WRCK E 0 A_Refire
        Goto Ready

      CoopFireLost:
        TNT1 A 0 A_JumpIfInventory("RJingModeOn",1,"RJFireCoopLost")
        WRCK F 4 BRIGHT A_FireCustomMissile("LostRocket2")
        WRCK GHGE 4
        WRCK E 0 A_Refire
        Goto Ready
        
      RJFireCoopLost:
        WRCK F 4 BRIGHT A_FireCustomMissile("LostRocket2RJ")
        WRCK GHGE 4
        WRCK E 0 A_Refire
        Goto Ready
		
      FireCTK:
		TK07 B 0 A_JumpIfInventory("DMModeOn", 1, "DMFireCTK")
		TK07 B 0 A_JumpIfInventory("CoopModeOn", 1, "CoopFireCTK")
        TK07 B 3
        TK07 C 0 A_PlaySound("Totenkopf/missilefire",CHAN_WEAPON)
        TK07 C 3 Bright A_FireCustomMissile("Totenkopf_Panzerschreck_Projectile",0,1,0,8)
		TK07 DE 3
		TK07 F 32
		TK07 A 3
        Goto Ready
		
	  CoopFireCTK:
        TK07 B 3
        TK07 C 0 A_PlaySound("Totenkopf/missilefire",CHAN_WEAPON)
        TK07 C 3 Bright A_FireCustomMissile("Totenkopf_Panzerschreck_ProjectileCoop",0,1,0,8)
		TK07 DE 3
		TK07 F 32
		TK07 A 3
        Goto Ready	  	
		
	  DMFireCTK:
        TK07 B 3
        TK07 C 0 A_PlaySound("Totenkopf/missilefire",CHAN_WEAPON)
        TK07 C 3 Bright A_FireCustomMissile("Totenkopf_Panzerschreck_ProjectileDM",0,1,0,8)
		TK07 DE 3
		TK07 F 32
		TK07 A 3
        Goto Ready		
    }
}

actor WolfRocket
{
    Scale 0.75
    Radius 8
    Height 6
    Speed 30
    Damage 20
    Projectile
    +RIPPER
    +FORCERADIUSDMG
    +NOEXTREMEDEATH
    +NOBOSSRIP
    SeeSound "wolfen/missilefire"
    DeathSound "wolfen/missilexplod"
    Obituary "$SAMSARA_WOLFEN_OB_SLOT5"
    States
    {
      Spawn:
        WMSL A 3 A_SpawnItem("WolfRocketSmoke")
        Loop

      Death:
        WFLB C 8 Bright A_Explode(128,32,0)
        WFLB D 6 Bright
        WFLB E 4 Bright
        Stop
    }
}

actor WolfRocketRJ : WolfRocket
{
    States
    {
      Death:
        WFLB C 8 Bright A_Explode(128,64)
        WFLB D 6 Bright
        WFLB E 4 Bright
        Stop
    }
}

actor WolfRocket2: WolfRocket { +THRUSPECIES Species "Player" }
actor WolfRocket2RJ: WolfRocketRJ { +THRUSPECIES Species "Player" }

actor WolfRocketSmoke
{
