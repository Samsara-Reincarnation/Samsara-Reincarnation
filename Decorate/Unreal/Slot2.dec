Actor U1ASMDBall 
{
	Speed 20
	Damage (0)
	Projectile
	+HITTRACER
	+FORCERADIUSDMG
	+THRUSPECIES
	Radius 12
	Height 24
	Health 1
	Scale 0.5
	RenderStyle Add
	Alpha 0.9
