Actor UShockRifleFired : Boolean { }
Actor IsUShockBall : Boolean { }
Actor Unreal_ASMDShockRifle : UnrealWeapon 
{
	Weapon.SelectionOrder 1700
	Weapon.SlotPriority 1
	Weapon.SlotNumber 2
	Weapon.AmmoType1 "Shell"
	Weapon.AmmoUse1 1
	Weapon.AmmoType2 "Shell"
	Weapon.AmmoUse2 1
	Weapon.AmmoGive 20
	Weapon.UpSound "Unreal/ASMD/Select"
	Obituary "%k inflicted mortal damage upon %o with the ASMD."
	Inventory.PickupMessage "You got the ASMD"
	Tag "ASMD Shock Rifle"
	States
	{
		Spawn:
			UN00 A 10 BRIGHT
			UN00 A 10 
			Loop
		Select:
			TNT1 AAAAAAAAAAAAAAAAAAAA 0 A_Raise
			TNT1 A 1 A_Raise
			loop	
		Ready:
			UN01 A 0 A_GiveInventory("Unreal_ASMDSelected",1)
			UN01 ABCDEFGH 2 A_WeaponReady(WRF_NOFIRE)
			Goto WIdle
		WIdle:
			UN01 I 0 A_Jump(192, 2)
			UN01 I 0 A_JumpIfInventory("UShockRifleFired", 1, "Steam")
			UN01 I 4 A_WeaponReady UN01 I 0 A_Jump(12, "Sway")
			UN01 I 0 A_TakeInventory("UShockRifleFired", 1)
//			UN01 J 4 A_WeaponReady UN01 I 0 A_Jump(12, "Sway")
			Loop
		Sway:
			UN02 OPQQPOOPQ 4 A_WeaponReady
			Goto WIdle
		Steam:
			UN02 AA 6 A_WeaponReady UN02 B 0 A_PlaySound("Unreal/ASMD/Steam", CHAN_WEAPON)
			UN02 BB 6 A_WeaponReady UN02 C 0 A_TakeInventory("UShockRifleFired", 1)
			UN02 CCDDEE 6 A_WeaponReady
			Goto WIdle
		Deselect:
			UN01 A 0 A_TakeInventory("Unreal_ASMDSelected",1)
			UN01 KLMN 2 
		InstantDeselect: // I have to copy paste this everytime. Thanks, Zandronum.
			TNT1 AAAAAAAAAAAAAAAAAAAAAAAAAAAA 0 A_Lower
			TNT1 A 1 A_Lower
			Wait			
		Fire:
			UN01 P 0 ACS_NamedExecuteWithResult("Unreal_Recoil")
			UN01 P 5 BRIGHT A_FireBullets(0.5,0.5,-1,35,"U1ASMDTracerPuff",FBF_NORANDOM|FBF_NORANDOMPUFFZ|FBF_USEAMMO)//A_FireCustomMissile("U1ASMDTracer",Random(-0.5,0.5),1,0,0,Random(-0.5,0.5))
			UN01 Q 0 BRIGHT A_PlaySound("Unreal/ASMD/Fire1", CHAN_WEAPON)
			UN01 Q 0 BRIGHT A_GiveInventory("UShockRifleFired", 1)
			UN01 Q 6 BRIGHT
			UN01 RS 5
			UN01 T 4 A_WeaponReady
			Goto WIdle
		AltFire:
			UN01 U 0 ACS_NamedExecuteWithResult("Unreal_Recoil")
			UN01 U 0 BRIGHT A_SetBlend("29 8f e8", 0.10, 10)
			UN01 U 4 BRIGHT A_FireCustomMissile("U1ASMDBall", 0,1,13,5)
			UN01 V 0 BRIGHT A_PlaySound("Unreal/ASMD/Fire2", CHAN_WEAPON)
			UN01 V 0 BRIGHT A_GiveInventory("UShockRifleFired", 1)
			UN01 V 4 BRIGHT 
			UN01 WX 4
			UN01 Y 4 A_WeaponReady
			Goto WIdle
	}
}

Actor U1ASMDTracerPuff
{
	DamageType "ASMDShockTrace"
	Height 16
	Radius 8
	+HITTRACER
	+PUFFGETSOWNER
	+PUFFONACTORS
	+ALWAYSPUFF
	+NOINTERACTION
	+CLIENTSIDEONLY
	+NOGRAVITY
	+SKYEXPLODE
	States
	{
		Spawn:
		Melee:
		Crash:
			TNT1 A 0 NoDelay ACS_NamedExecuteWithResult("Unreal_ASMDTrace")
			TNT1 A 0 A_RadiusThrust(700,20, !RTF_AFFECTSOURCE, 20)
			TNT1 A 0 A_GiveInventory("Unreal_ASMDZThrust", 1, AAPTR_TRACER)
			TNT1 A 0 A_JumpIf(z - floorz < 6,"HitPlane")
			TNT1 A 0 A_CheckCeiling("HitPlane")
			TNT1 A 0 A_JumpIfInventory("IsUShockBall",1,3,AAPTR_Tracer)
			TNT1 A 0 A_PlaySound("Unreal/ASMD/Explode", CHAN_BODY)
			TNT1 A 1 A_SpawnItemEX("U1ShockRippleB_Large")
			Stop
			TNT1 A 1
			Stop
		XDeath:	
			TNT1 A 0 ACS_NamedExecuteWithResult("Unreal_ASMDTrace")
			TNT1 A 0 A_JumpIf(CallACS("Unreal_BloodGenerator_Offsets")==1,1)
			TNT1 A 0 A_RadiusThrust(700,20, !RTF_AFFECTSOURCE, 20)
			TNT1 A 0 A_GiveInventory("Unreal_ASMDZThrust", 1, AAPTR_TRACER)
			TNT1 A 0 A_JumpIf(z - floorz < 6,"HitPlane")
			TNT1 A 0 A_CheckCeiling("HitPlane")
			TNT1 A 0 A_JumpIfInventory("IsUShockBall",1,2,AAPTR_Tracer)
			TNT1 A 0 A_PlaySound("Unreal/ASMD/Explode", CHAN_BODY)
			TNT1 A 1 A_SpawnItemEX("U1ShockRippleB_Large")
			TNT1 A 0 A_GiveInventory("UnrealBloodyPuffGenerator",1,AAPTR_TRACER)	
			Stop
		HitPlane:
			TNT1 A 0 A_PlaySound("Unreal/ASMD/Explode", CHAN_BODY)
			TNT1 A 1 A_SpawnItemEX("U1ShockRippleB_Plane")
			Stop			
	}
}

