actor IPOGGrenade
{
    Decal Scorch
    Radius 8
    Height 16
    Mass 1
//	Health 5
    Speed 17
    Damage 0
    DamageType "IPOGGrenade"
    //DeathSound "greed/rockboom"
    Projectile
    -NOGRAVITY
    +LOWGRAVITY
    +FORCERADIUSDMG
	+BLOODLESSIMPACT
	+HITTRACER
	+CANNOTPUSH
	+NODAMAGETHRUST
	-EXTREMEDEATH
	+NOEXTREMEDEATH
	-SKYEXPLODE
//	+SHOOTABLE
	var int user_angle;
    States
    {
      Spawn:
	    GP10 A 0
		GP10 A 0 A_PlaySound("greed/bombfly",CHAN_BODY)
	  SpawnContinue:
        GP10 A 1 Bright
        Loop
	  XDeath:
		TNT1 A 0 A_GiveInventory("IPOGBloodGenerator", 1, AAPTR_TRACER)
      Death:
		TNT1 A 0 A_PlaySound("greed/rockboom")
        TNT1 A 0 A_NoGravity
		TNT1 A 0 A_CustomMissile("IPOGGrenadeBullet2",0,0,user_angle*30)
		TNT1 A 0 A_SetUserVar("user_angle",user_angle+1)
		TNT1 A 0 A_JumpIf(user_angle == 12, 1)
		Goto Death+2
		TNT1 A 0 A_SetUserVar("user_angle",0)
		TNT1 A 0 A_CustomMissile("IPOGGrenadeBullet",-32,0,user_angle*45)
		TNT1 A 0 A_SetUserVar("user_angle",user_angle+1)
		TNT1 A 0 A_JumpIf(user_angle == 8, 1)
		Goto Death+6
		TNT1 A 0 A_SetUserVar("user_angle",0)
		TNT1 A 0 A_CustomMissile("IPOGGrenadeBullet",32,0,user_angle*45)
		TNT1 A 0 A_SetUserVar("user_angle",user_angle+1)
		TNT1 A 0 A_JumpIf(user_angle == 8, 1)
		Goto Death+10
		TNT1 A 0 A_Jump(128,"Finish2")
		GP30 BCD 4 bright A_Stop
		Stop
	  Finish2:
		GP31 ABCD 4 bright A_Stop
		Stop
    }
}

