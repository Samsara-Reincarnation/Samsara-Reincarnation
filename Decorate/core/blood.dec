actor SamsaraBloodyHellBlood : Blood replaces Blood
{
    Game Doom
    States
    {
    Spawn:
		TNT1 A 0
		TNT1 A 0 A_JumpIf(ACS_NamedExecuteWithResult("SamsaraClientDecorate",12) == 4, "SpawnBolognese")
		TNT1 A 0 A_JumpIf(ACS_NamedExecuteWithResult("SamsaraClientDecorate",12) == 2, "SpawnBrutal")
		TNT1 A 0 A_JumpIf(ACS_NamedExecuteWithResult("SamsaraClientDecorate",12) == -2, "SpawnComic")
		Goto SpawnNormal
	SpawnNormal:
        BLUD C 1
        Goto Spawn+4
        BLUD B 1
        Goto Spawn+7
        BLUD A 1
        BLUD A 7 A_SpawnItemEx("Switchable_FlyingBlood",0,0,0,random(-350,350)/100.00,random(-350,350)/100.00,random(500,1000)/100.00,random(-180,180),33)
        Stop
        BLUD C 7 A_SpawnItemEx("Switchable_FlyingBlood",0,0,0,random(-350,350)/100.00,random(-350,350)/100.00,random(500,1000)/100.00,random(-180,180),33)
        BLUD BA 8
        Stop
        BLUD B 7 A_SpawnItemEx("Switchable_FlyingBlood",0,0,0,random(-350,350)/100.00,random(-350,350)/100.00,random(500,1000)/100.00,random(-180,180),33)
        BLUD A 8
        Stop
	SpawnBrutal:
		TNT1 A 0 A_SpawnItemEx("Switchable_FlyingBlood",0,0,0,random(-350,350)/100.00,random(-350,350)/100.00,random(500,1000)/100.00,random(-180,180),33)
		TNT1 A 0 A_SetScale(0.33)
		BH2A ABDEFGH 1
        Stop
	SpawnBolognese:
		TNT1 A 0 A_SpawnItemEx("Switchable_FlyingBlood",0,0,0,random(-350,350)/100.00,random(-350,350)/100.00,random(500,1000)/100.00,random(-180,180),33)
		TNT1 A 0 A_SetScale(0.8)
		TNT1 A 0 A_SpawnItemEx("Bolognese_OnlineSound1",0,0,0,0,0,0,0,160)
		BSPX A 2
		BSPX ABCDEFG 1
		BSPX HHHHHHH 1 A_FadeOut(0.1)
		Stop
	SpawnComic:
		TNT1 A 0 A_SpawnItemEx("SamsaraComicEffect",0,0,0,frandom(-1.0,1.0),frandom(-1.0,1.0),frandom(0.5,1.5))
		TNT1 A 0
		Stop
    }
}

