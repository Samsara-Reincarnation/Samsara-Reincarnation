actor Switchable_FlyingBlood
{
    Game Doom
    Scale 0.75
    Health 1
    Radius 8
    Height 1
    mass 1
    +CORPSE
    -SOLID
    +CANNOTPUSH
    +DONTSPLASH
    +NOTELEPORT
    +NOBLOCKMAP
    +CLIENTSIDEONLY
    states
    {
    Spawn:
        TNT1 A 1
        TNT1 A 0 A_JumpIf(ACS_NamedExecuteWithResult("SamsaraClientDecorate",12) == 4, "SpawnBolognese")
		TNT1 A 0 A_JumpIf(ACS_NamedExecuteWithResult("SamsaraClientDecorate",12) == 3, "SpawnNightmare")
        TNT1 A 0 A_JumpIf(ACS_NamedExecuteWithResult("SamsaraClientDecorate",12) == 2, "SpawnBrutal")
        TNT1 A 0 A_JumpIf(ACS_NamedExecuteWithResult("SamsaraClientDecorate",12) == 1, "SpawnNashgore")
        TNT1 A 1 A_JumpIf(ACS_NamedExecuteWithResult("SamsaraClientDecorate",12) == -1, "SpawnHappy")
        stop
    SpawnNashgore:
        TNT1 A 0
        FBLD AABBCCDD 2 A_SpawnItemEx("Nashgore_FlyingBloodTrail",0,0,0,0,0,0,0,129)
        loop
    SpawnBrutal:
        TNT1 A 0
        TNT1 A 0 A_SpawnItemEx("RedMistTrail",0,0,0,0,0,0,0,161)
        TNT1 A 0 A_SpawnItemEx("RedMistIntenseTrail",0,0,0,0,0,0,0,161)
        TNT1 A 0 A_SpawnItemEx("BrutalFlyingBloodTrail2",0,0,0,random(-16,16)*0.25,random(-16,16)*0.25,random(8,12),random(0,359),129)
        TNT1 AAAAAA 0 A_SpawnItemEx("BrutalBloodSpatter",0,0,0,random(-200,200)/100.00,random(-200,200)/100.00,random(200,600)/100.00,random(-180,180),161)
        TNT1 AAAAA 0 A_SpawnItemEx("BrutalChunkTinier",0,0,0,random(-250,250)/100.00,random(-250,250)/100.00,random(200,800)/100.00,random(-180,180),161,25)
    SpawnBrutal2:
        TNT1 A 0
        BRSP AABBCCDD 2 A_SpawnItemEx("BrutalFlyingBloodTrail",0,0,0,0,0,0,0,129)
        loop
    SpawnHappy:
        TNT1 A 0
        TNT1 A 0 A_ChangeFlag("NOGRAVITY",1)
        TNT1 A 0 A_ChangeFlag("DoomBounce",1)
        TNT1 A 0 A_SpawnItemEx("RainbowSparkles",0,0,0,0,0,0,0,32)
        TNT1 AA 0 A_SpawnItemEx("WhiteSpark",0,0,0,random(-60,60)/20.0,random(-60,60)/20.0,random(-40,40)/20.0,random(-180,180),32)
        TNT1 AAA 0 A_SpawnItemEx("RainbowSpark",0,0,0,random(-60,60)/20.0,random(-60,60)/20.0,random(-40,40)/20.0,random(-180,180),32)
        stop
    SpawnNightmare:
        TNT1 A 0
        TNT1 AAA 0 A_SpawnItemEx("BrutalBloodSpatter",0,0,0,random(-200,200)/100.00,random(-200,200)/100.00,random(200,600)/100.00,random(-180,180),161)
        BSQ1 ABC 3
    SpawnNightmare2:
        BSQ1 D 1 A_SpawnItemEx("NightmareFlyingBloodTrail",0,0,0,0,0,0,0,129)
        loop
    SpawnNightmareB:
        TNT1 A 0
        TNT1 AAA 0 A_SpawnItemEx("BrutalBloodSpatter",0,0,0,random(-200,200)/100.00,random(-200,200)/100.00,random(200,600)/100.00,random(-180,180),161)
        BSQ2 ABC 3
    SpawnNightmareB2:
        BSQ2 D 1 A_SpawnItemEx("NightmareFlyingBloodTrail",0,0,0,0,0,0,0,129)
        loop
	SpawnBolognese:
		TNT1 A 0
		TNT1 A 0 A_ChangeFlag("THRUACTORS", true)
		TNT1 A 0 A_SpawnItemEx("Bolognese_SuperGoreMistTiny",0,0,0,random(-200,200)/100.00,random(-200,200)/100.00,random(200,600)/100.00,random(-180,180),129|SXF_TRANSFERTRANSLATION)
		TNT1 A 0 A_SpawnItemEx("Bolognese_FlyingBlood",0,0,7,random(-200,200)/100.00,random(-200,200)/100.00,random(200,600)/100.00,random(-180,180),129|SXF_TRANSFERTRANSLATION)
		TNT1 A 0 A_SpawnItemEx("Bolognese_FlyingBloodTrail",0,0,0,random(-200,200)/100.00,random(-200,200)/100.00,random(200,600)/100.00,random(-180,180),129|SXF_TRANSFERTRANSLATION)
    SpawnBolognese2:
        TNT1 A 0
		TNT1 A 0 A_ChangeFlag("THRUACTORS", false)
		stop
    Crash:
        TNT1 A 0
        TNT1 A 0 A_JumpIf(ACS_NamedExecuteWithResult("SamsaraClientDecorate",12) == 4, "CrashBolognese")
		TNT1 A 0 A_JumpIf(ACS_NamedExecuteWithResult("SamsaraClientDecorate",12) == 3, "CrashNightmare")
        TNT1 A 0 A_JumpIf(ACS_NamedExecuteWithResult("SamsaraClientDecorate",12) == 2, "CrashBrutal")
        TNT1 A 0 A_JumpIf(ACS_NamedExecuteWithResult("SamsaraClientDecorate",12) == 1, "CrashNashgore")
        TNT1 A 1
        stop
    CrashNashgore:
        TNT1 A 0
        TNT1 A 1 A_SpawnItem("NashGore_BloodSpot",0,0,0,129)
        stop
    CrashBrutal:
        TNT1 A 0
        TNT1 A 1 A_SpawnItem("BrutalLittlePuddle",0,0,0,129)
        TNT1 AAAAAAA 0 A_SpawnItemEx("BrutalBloodSpatter",0,0,0,random(-200,200)/100.00,random(-200,200)/100.00,random(200,800)/100.00,random(-180,180),169)
        BRSP EFGHIJKL 2
        stop
    CrashNightmare:
        TNT1 A 0
        TNT1 A 1 A_SpawnItem("NightmareLittlePuddle",0,0,0,129)
        TNT1 AAA 0 A_SpawnItemEx("BrutalBloodSpatter",0,0,0,random(-100,100)/100.00,random(-100,100)/100.00,random(100,400)/100.00,random(-180,180),169)
        BSQ1 EFGHI 2
        stop
    CrashNightmare2:
        TNT1 A 0
        BSQ2 EFGHI 2
        stop
	CrashBolognese:
		TNT1 A 0
		stop
    }
}

