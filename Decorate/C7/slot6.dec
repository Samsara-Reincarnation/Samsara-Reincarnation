actor "AlienAssaultCannon" : InstantSwitchWeapon
{
    Weapon.SelectionOrder 800
    Weapon.SlotNumber 6
	Weapon.BobStyle InverseAlpha
	Weapon.BobRangeX 0.2
	Weapon.BobRangeY 0.2
	Weapon.BobSpeed 4.0	
    Inventory.PickUpSound "C7/AmmoPickup"
    Weapon.AmmoUse 2
    Weapon.AmmoGive 75
    Weapon.AmmoType "Cell"
    +THRUGHOST
	+WEAPON.ALT_AMMO_OPTIONAL
	+WEAPON.NOALERT
	Weapon.AmmoType2 "C7ProxyMineAmmo"
	Weapon.AmmoUse2 1
	Weapon.AmmoGive2 0
    Inventory.PickupMessage "You got the Alien Assault-Cannon!"
    Obituary "%k's assault cannon ripped %o to dust."
	Tag "Alien Assault-Cannon"	
    Weapon.YAdjust 20
	Inventory.RestrictedTo "Corridor7Player"	
    States
    {
      Spawn:
        7AL2 A -1
        Loop
      Ready:
        TNT1 A 0 SetPlayerProperty(0,1,2)
        C7AL F 1 A_WeaponReady
        goto Ready+1
      Fire:
        C7AL F 2
	  Hold:
		TNT1 A 0 A_JumpIfInventory("DMModeOn",1,"DMFire")
        TNT1 A 0 A_JumpIfInventory("CoopModeOn",1,"CoopFire")
        TNT1 A 0 A_PlayWeaponSound("C7/AlienAssaultCannon")
		TNT1 A 0 A_AlertMonsters
		C7AL A 0 BRIGHT A_FireBullets(6,6,2,random(0,2),"BlankPuffC7", FBF_NORANDOM, 64)
		C7AL A 0 BRIGHT A_FireBullets(6,6,4,random(2,4),"BlankPuffC7", FBF_NORANDOM, 128)
        C7AL A 3 BRIGHT A_FireBullets(6,6,4,random(4,10),"BlankPuffC7", FBF_NORANDOM|FBF_USEAMMO)
		C7AL B 4
		C7AL C 0 BRIGHT A_FireBullets(6,6,2,random(0,2),"BlankPuffC7", FBF_NORANDOM, 64)
		C7AL C 0 BRIGHT A_FireBullets(6,6,4,random(2,4),"BlankPuffC7", FBF_NORANDOM, 128)		
        C7AL C 3 BRIGHT A_FireBullets(6,6,4,random(4,10),"BlankPuffC7", FBF_NORANDOM|FBF_USEAMMO)
		C7AL B 4
        TNT1 A 0 A_Refire
        C7AL DEED 1 A_ClearRefire
        Goto Ready
      CoopFire:
        TNT1 A 0 A_PlayWeaponSound("C7/AlienAssaultCannon")
		TNT1 A 0 A_AlertMonsters
        C7AL AAA 0 BRIGHT A_FireCustomMissile("C7AssaultBullet",fRandom(fRandom(3.70,-4.00),fRandom(-3.70,4.00)),0,0,1,0,fRandom(fRandom(-3.70,4.00),fRandom(3.70,-4.00)))
        C7AL A 3 BRIGHT A_FireCustomMissile("C7AssaultBullet",fRandom(fRandom(-3.70,4.00),fRandom(3.70,-4.00)),1,0,1,0,fRandom(fRandom(3.70,-4.00),fRandom(-3.70,4.00)))
		C7AL B 4
        C7AL CCC 0 BRIGHT A_FireCustomMissile("C7AssaultBullet",fRandom(fRandom(3.70,-4.00),fRandom(-3.70,4.00)),0,0,1,0,fRandom(fRandom(-3.70,4.00),fRandom(3.70,-4.00)))
        C7AL C 3 BRIGHT A_FireCustomMissile("C7AssaultBullet",fRandom(fRandom(-3.70,4.00),fRandom(3.70,-4.00)),1,0,1,0,fRandom(fRandom(3.70,-4.00),fRandom(-3.70,4.00)))
		C7AL B 4
        TNT1 A 0 A_Refire
        C7AL DEED 1 A_ClearRefire
        Goto Ready
	  DMFire:
        TNT1 A 0 A_PlayWeaponSound("C7/AlienAssaultCannon")
		TNT1 A 0 A_AlertMonsters
		C7AL A 0 BRIGHT A_FireBullets(6,6,2,random(0,3),"BlankPuffC7", FBF_NORANDOM, 64)
		C7AL A 0 BRIGHT A_FireBullets(6,6,4,random(3,5),"BlankPuffC7", FBF_NORANDOM, 128)
        C7AL A 3 BRIGHT A_FireBullets(6,6,4,random(4,10),"BlankPuffC7", FBF_NORANDOM|FBF_USEAMMO)
		C7AL B 4
		C7AL A 0 BRIGHT A_FireBullets(6,6,2,random(0,3),"BlankPuffC7", FBF_NORANDOM, 64)
		C7AL A 0 BRIGHT A_FireBullets(6,6,4,random(3,5),"BlankPuffC7", FBF_NORANDOM, 128)
        C7AL A 3 BRIGHT A_FireBullets(6,6,4,random(4,10),"BlankPuffC7", FBF_NORANDOM|FBF_USEAMMO)
		C7AL B 4
        TNT1 A 0 A_Refire
        C7AL DEED 1 A_ClearRefire
        Goto Ready	  
	  AltFire: 	  
		TNT1 A 0 A_JumpIfInventory("DMModeOn",1,"AltDMFire")		
        TNT1 A 0 A_JumpIfInventory("CoopModeOn",1,"AltCoopFire")		
		C7AL F 0 A_JumpIfNoAmmo("Ready")
		C7AL F 5 A_SpawnItemEx("C7ProxyMine",0,0,0,0,0,0,0)
		C7AL F 5 A_TakeInventory("C7ProxyMineAmmo", 1)
		C7AL F 5 A_Print("Mine placed")
		Goto Ready
      AltCoopFire:	
		C7AL F 0 A_JumpIfNoAmmo("Ready")
		C7AL F 5 A_SpawnItemEx("C7CoopProxyMine",0,0,0,0,0,0,0,SXF_SETMASTER)
		C7AL F 5 A_TakeInventory("C7ProxyMineAmmo", 1)
		C7AL F 5 A_Print("Mine placed")
		Goto Ready	 
      AltDMFire:	
		C7AL F 0 A_JumpIfNoAmmo("Ready")
		C7AL F 5 A_SpawnItemEx("C7ProxyMineDM",0,0,0,0,0,0,0,SXF_SETMASTER)
		C7AL F 5 A_TakeInventory("C7ProxyMineAmmo", 1)
		C7AL F 5 A_Print("Mine placed")
		Goto Ready		
    }
} 
 
actor C7AssaultBullet : FastProjectile
{
    Damage (Random(4,10))
    Radius 1
    Height 1
    Speed 350
    Projectile
    Renderstyle "Normal"
    Species "Player"
    +BLOODSPLATTER
    +THRUSPECIES
    +NOTIMEFREEZE
	+NOEXTREMEDEATH
	+NODAMAGETHRUST
    Alpha 1.0
    States
    {
      Spawn:
        TNT1 A 1
        loop

      Death:
        TNT1 A 1
        stop
    }
}