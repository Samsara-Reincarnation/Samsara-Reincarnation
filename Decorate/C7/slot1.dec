actor "M24CAW" : InstantSwitchWeapon
{
    Weapon.SelectionOrder 1100
    Weapon.SlotNumber 1
    Weapon.SlotPriority 1	
	Weapon.BobStyle InverseAlpha
	Weapon.BobRangeX 0.2
	Weapon.BobRangeY 0.2
	Weapon.BobSpeed 4.0
    Inventory.PickUpSound "C7/AmmoPickup"
    Weapon.AmmoUse 1
    Weapon.AmmoGive 30
    Weapon.AmmoType "Clip"
	+WEAPON.ALT_AMMO_OPTIONAL
	+WEAPON.NOALERT
	Weapon.AmmoType2 "C7ProxyMineAmmo"
	Weapon.AmmoUse2 1
	Weapon.AmmoGive2 0
    Inventory.PickupMessage "You got the Machine Gun!"
    Obituary "%k shot %o to pieces with the Machine Gun."
	Tag "M-24 Close Assault Weapon"	
    Weapon.YAdjust 13
	Inventory.RestrictedTo "Corridor7Player"		
    States
    {
      Spawn:
        7MG2 A -1
        Loop
      Ready:
        C7MG A 1 A_WeaponReady
        loop
      Fire:
        C7MG B 2
      Hold:
		TNT1 A 0 A_JumpIfInventory("DMModeOn",1,"DMFire")
        TNT1 A 0 A_JumpIfInventory("CoopModeOn",1,"CoopFire")
        TNT1 A 0 A_PlayWeaponSound("C7/CAW")
		TNT1 A 0 A_AlertMonsters
		C7MG C 0 BRIGHT A_FireBullets(3,3,-1,random(2,9),"BlankPuffBloodless", FBF_NORANDOM, 64)
		C7MG C 0 BRIGHT A_FireBullets(3,3,-1,random(2,9),"BlankPuffBloodless", FBF_NORANDOM, 256)
        C7MG C 3 BRIGHT A_FireBullets(3,3,-1,random(4,18),"BlankPuffC7", FBF_NORANDOM|FBF_USEAMMO)
		C7MG D 0 BRIGHT A_FireBullets(3,3,-1,random(2,9),"BlankPuffBloodless", FBF_NORANDOM, 64)
		C7MG D 0 BRIGHT A_FireBullets(3,3,-1,random(2,6),"BlankPuffBloodless", FBF_NORANDOM, 256)		
        C7MG D 3 BRIGHT A_FireBullets(3,3,-1,random(4,18),"BlankPuffC7", FBF_NORANDOM|FBF_USEAMMO)
        TNT1 A 0 A_Refire
        C7MG HGFE 3 A_ClearRefire
        Goto Ready
      CoopFire:
        TNT1 A 0 A_PlayWeaponSound("C7/CAW")
		TNT1 A 0 A_AlertMonsters
		C7MG C 0 BRIGHT A_FireBullets(3,3,-1,random(2,9),"BlankPuffBloodlessCoop", FBF_NORANDOM, 64)
		C7MG C 0 BRIGHT A_FireBullets(3,3,-1,random(2,9),"BlankPuffBloodlessCoop", FBF_NORANDOM, 256)
        C7MG C 3 BRIGHT A_FireBullets(3,3,-1,random(4,18),"BlankPuffC7Coop", FBF_NORANDOM|FBF_USEAMMO)
		C7MG D 0 BRIGHT A_FireBullets(3,3,-1,random(2,9),"BlankPuffBloodlessCoop", FBF_NORANDOM, 64)
		C7MG D 0 BRIGHT A_FireBullets(3,3,-1,random(2,6),"BlankPuffBloodlessCoop", FBF_NORANDOM, 256)		
        C7MG D 3 BRIGHT A_FireBullets(3,3,-1,random(4,18),"BlankPuffC7Coop", FBF_NORANDOM|FBF_USEAMMO)
        TNT1 A 0 A_Refire
        C7MG HGFE 3 A_ClearRefire
        Goto Ready
	  DMFire:
        TNT1 A 0 A_PlayWeaponSound("C7/CAW")
		TNT1 A 0 A_AlertMonsters
		C7MG C 0 BRIGHT A_FireBullets(3,3,-1,random(3,10),"BlankPuffBloodless", FBF_NORANDOM, 64)
		C7MG C 0 BRIGHT A_FireBullets(3,3,-1,random(3,10),"BlankPuffBloodless", FBF_NORANDOM, 256)
        C7MG C 3 BRIGHT A_FireBullets(3,3,-1,random(5,18),"BlankPuffC7", FBF_NORANDOM|FBF_USEAMMO)
		C7MG D 0 BRIGHT A_FireBullets(3,3,-1,random(3,10),"BlankPuffBloodless", FBF_NORANDOM, 64)
		C7MG D 0 BRIGHT A_FireBullets(3,3,-1,random(3,10),"BlankPuffBloodless", FBF_NORANDOM, 256)		
        C7MG D 3 BRIGHT A_FireBullets(3,3,-1,random(5,18),"BlankPuffC7", FBF_NORANDOM|FBF_USEAMMO)
        TNT1 A 0 A_Refire
        C7MG HGFE 3 A_ClearRefire
        Goto Ready	  
	  AltFire: 	  
		TNT1 A 0 A_JumpIfInventory("DMModeOn",1,"AltDMFire")	
        TNT1 A 0 A_JumpIfInventory("CoopModeOn",1,"AltCoopFire")	
		C7MG A 0 A_JumpIfNoAmmo("Ready")
		C7MG A 5 A_SpawnItemEx("C7ProxyMine",0,0,0,0,0,0,0,SXF_SETMASTER|SXF_NOCHECKPOSITION)
		C7MG A 5 A_TakeInventory("C7ProxyMineAmmo", 1)
		C7MG A 5 A_Print("Mine placed")
		Goto Ready
      AltCoopFire:	
		C7MG A 0 A_JumpIfNoAmmo("Ready")
		C7MG A 5 A_SpawnItemEx("C7CoopProxyMine",0,0,0,0,0,0,0,SXF_SETMASTER|SXF_NOCHECKPOSITION)
		C7MG A 5 A_TakeInventory("C7ProxyMineAmmo", 1)
		C7MG A 5 A_Print("Mine placed")
		Goto Ready	
      AltDMFire:	
		C7MG A 0 A_JumpIfNoAmmo("Ready")
		C7MG A 5 A_SpawnItemEx("C7ProxyMineDM",0,0,0,0,0,0,0,SXF_SETMASTER|SXF_NOCHECKPOSITION)
		C7MG A 5 A_TakeInventory("C7ProxyMineAmmo", 1)
		C7MG A 5 A_Print("Mine placed")
		Goto Ready		
    }
} 

