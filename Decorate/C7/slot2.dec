actor "M343Vulcan" : InstantSwitchWeapon
{
    Weapon.SelectionOrder 1400
    Weapon.SlotNumber 2
	Weapon.BobStyle InverseAlpha
	Weapon.BobRangeX 0.2
	Weapon.BobRangeY 0.2
	Weapon.BobSpeed 4.0	
    Inventory.PickUpSound "C7/AmmoPickup"
    Weapon.AmmoUse 1
    Weapon.AmmoGive 10
    Weapon.AmmoType "Shell"
    +THRUGHOST
	+WEAPON.ALT_AMMO_OPTIONAL
	+WEAPON.NOALERT
	Weapon.AmmoType2 "C7ProxyMineAmmo"
	Weapon.AmmoUse2 1
	Weapon.AmmoGive2 0
    Inventory.PickupMessage "You got M-343 Mini Gun!"
    Obituary "%k ripped huge chunks out of %o with the M343."
    Weapon.YAdjust 11
	Tag "M-343 Vulcan"	
	Inventory.RestrictedTo "Corridor7Player"		
    States
    {
      Spawn:
        7VL2 A -1
        Loop

      Ready:
        TNT1 A 0 SetPlayerProperty(0,1,2)
        C7VL E 1 A_WeaponReady
        goto Ready+1

      Fire:
		TNT1 A 0 A_JumpIfInventory("DMModeOn",1,"DMFire")
        TNT1 A 0 A_JumpIfInventory("CoopModeOn",1,"CoopFire")
        C7VL E 2 A_AlertMonsters
        TNT1 A 0 A_PlayWeaponSound("C7/Vulcan")
		C7VL A 0 BRIGHT A_FireBullets(2,2,3,random(0,2),"BlankPuffBloodless",FBF_NORANDOM, 64)
		C7VL A 0 BRIGHT A_FireBullets(2,2,3,random(3,8),"BlankPuffBloodless",FBF_NORANDOM, 128)
        C7VL A 2 BRIGHT A_FireBullets(2,2,3,random(5,15),"BlankPuffC7",FBF_NORANDOM|FBF_USEAMMO)
        C7VL B 2
		C7VL CD 3
        TNT1 A 0 A_Refire
        C7VL E 3 A_ClearRefire
        Goto Ready

      CoopFire:
        C7VL E 2 A_AlertMonsters
        TNT1 A 0 A_PlayWeaponSound("C7/Vulcan")
        C7VL AA 0 A_FireCustomMissile("C7VulcanBullet",fRandom(fRandom(-1.50,-1.50),fRandom(1.50,1.50)),0,0,0,0,fRandom(fRandom(-1.50,-1.50),fRandom(1.50,1.50)))
        C7VL A 2 BRIGHT A_FireCustomMissile("C7VulcanBullet",fRandom(fRandom(-1.50,-1.50),fRandom(1.50,1.50)),1,0,0,0,fRandom(fRandom(-1.50,-1.50),fRandom(1.50,1.50)))
        C7VL B 2
		C7VL CD 3
        TNT1 A 0 A_Refire
        C7VL E 3 A_ClearRefire
        Goto Ready
		
	  DMFire:
        C7VL E 2 A_AlertMonsters
        TNT1 A 0 A_PlayWeaponSound("C7/Vulcan")
		C7VL A 0 BRIGHT A_FireBullets(2,2,3,random(1,4),"BlankPuffBloodless",FBF_NORANDOM, 64)
		C7VL A 0 BRIGHT A_FireBullets(2,2,3,random(4,9),"BlankPuffBloodless",FBF_NORANDOM, 128)
        C7VL A 2 BRIGHT A_FireBullets(2,2,3,random(5,15),"BlankPuffC7",FBF_NORANDOM|FBF_USEAMMO)
        C7VL B 2
		C7VL CD 3
        TNT1 A 0 A_Refire
        C7VL E 3 A_ClearRefire
        Goto Ready	  
		
	  AltFire:   	  
		TNT1 A 0 A_JumpIfInventory("DMModeOn",1,"AltDMFire")	
        TNT1 A 0 A_JumpIfInventory("CoopModeOn",1,"AltCoopFire")		
		C7VL E 0 A_JumpIfNoAmmo("Ready")
		C7VL E 5 A_SpawnItemEx("C7ProxyMine",0,0,0,0,0,0,0)
		C7VL E 5 A_TakeInventory("C7ProxyMineAmmo", 1)
		C7VL E 5 A_Print("Mine placed")
		Goto Ready
		
      AltCoopFire:	
		C7VL E 0 A_JumpIfNoAmmo("Ready")
		C7VL E 5 A_SpawnItemEx("C7CoopProxyMine",0,0,0,0,0,0,0,SXF_SETMASTER)
		C7VL E 5 A_TakeInventory("C7ProxyMineAmmo", 1)
		C7VL E 5 A_Print("Mine placed")
		Goto Ready	  
		
      AltDMFire:	
		C7VL E 0 A_JumpIfNoAmmo("Ready")
		C7VL E 5 A_SpawnItemEx("C7ProxyMineDM",0,0,0,0,0,0,0,SXF_SETMASTER)
		C7VL E 5 A_TakeInventory("C7ProxyMineAmmo", 1)
		C7VL E 5 A_Print("Mine placed")
		Goto Ready			
    }
} 

Actor BlankPuffC7 : BlankPuff { +NOEXTREMEDEATH }

actor C7VulcanBullet : FastProjectile
{
    Damage (random(5,21))
    Radius 1
    Height 1
    Speed 350
    Projectile
    Renderstyle "Normal"
    Species "Player"
    +BLOODSPLATTER
    +THRUSPECIES
    +NOTIMEFREEZE
	+NOEXTREMEDEATH
	+NODAMAGETHRUST
    Alpha 1.0
    States
    {
      Spawn:
        TNT1 A 1
        loop

      Death:
        TNT1 A 1
        stop
    }
}