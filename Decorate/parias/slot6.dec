	Height 6
	Speed 20
	FastSpeed 28
	Damage 6
	Projectile
	-ACTIVATEIMPACT
	-ACTIVATEPCROSS
	RenderStyle Add
	Obituary "$OB_MPFWEAPLIGHTNING"
	States
	{
		Spawn:
			H105 MNO 3 Bright A_SpawnItemEx("HexenGauntletPlasmaSpark",0,0,0,random(-2,2),random(-2,2),random(1,2))
			Loop
		Death:
			H105 S 0 A_PlaySound("hexen/weapons/gauntlethit", CHAN_BODY, 1.0)
